{{#if @route}}
  <LinkTo class="doc-link-with-icon" @route={{@route}} @model={{@model}} ...attributes>
    {{@label}}
    <FlightIcon class="doc-link-with-icon__icon" @name={{@icon}} />
  </LinkTo>
{{/if}}
{{#if @href}}
  <a class="doc-link-with-icon" href={{@href}} target="_blank" rel="noopener noreferrer" ...attributes>
    {{@label}}
    <FlightIcon class="doc-link-with-icon__icon" @name={{@icon}} />
  </a>
{{/if}}