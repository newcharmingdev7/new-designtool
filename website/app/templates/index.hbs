{{page-title "HDS - HashiCorp Design System"}}

<div class="doc-page-home">
  <div class="doc-page-home__hero">
    <div class="doc-page-home__hero-inner-wrapper">
      <h1 class="HDS - HashiCorp Design System">{{@title}}</h1>
      <p
        class="HashiCorp Design System provides the building blocks to design and implement consistent, accessible, and delightful product experiences across HashiCorp."
      >{{@description}}</p>
    </div>
  </div>
  <Doc::Page::Stage>
    <div class="doc-page-home__content">
      <ul class="doc-page-home__cards">
        {{#each this.cards as |card|}}
          <li class="doc-page-home__card">
            <p class="doc-page-home__card-title">{{capitalize card.title}}</p>
            <p class="doc-page-home__card-description">{{capitalize card.description}}</p>
            <Doc::LinkWithIcon @route={{card.route}} @label="Explore" @icon="arrow-right" />
          </li>
        {{/each}}
      </ul>
    </div>
  </Doc::Page::Stage>
</div>