<button
  class={{this.classNames}}
  type="button"
  {{on "click" this.onClick}}
  aria-controls={{@contentId}}
  aria-expanded={{if @isOpen "true" "false"}}
  aria-label={{@ariaLabel}}
  ...attributes
>
  <FlightIcon @name="chevron-down" @size={{if (eq @size "large") "24" "16"}} @isInlineBlock={{false}} />
</button>