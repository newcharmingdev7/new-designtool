<Hds::DisclosurePrimitive class={{this.classNames}} @isOpen={{@isOpen}} ...attributes>
  <:toggle as |t|>
    <div class="hds-accordion-item__toggle">
      {{#if (not @isStatic)}}
        <Hds::Accordion::Item::Button
          @isOpen={{t.isOpen}}
          @onClickToggle={{t.onClickToggle}}
          @contentId={{this.contentId}}
          @ariaLabel={{this.ariaLabel}}
          @size={{this.size}}
          @parentContainsInteractive={{this.containsInteractive}}
        />
      {{/if}}

      <Hds::Text::Body
        @tag="div"
        @size={{this.toggleTextSize}}
        @weight="semibold"
        @color="strong"
        class="hds-accordion-item__toggle-content"
      >
        {{yield to="toggle"}}
      </Hds::Text::Body>
    </div>
  </:toggle>

  <:content>
    <Hds::Text::Body
      class="hds-accordion-item__content"
      @tag="div"
      @size="200"
      @weight="regular"
      @color="primary"
      id={{this.contentId}}
    >
      {{yield to="content"}}
    </Hds::Text::Body>
  </:content>
</Hds::DisclosurePrimitive>