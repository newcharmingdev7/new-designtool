{{#if (eq this.tag "h1")}}
  <h1 class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</h1>
{{else if (eq this.tag "h2")}}
  <h2 class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</h2>
{{else if (eq this.tag "h3")}}
  <h3 class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</h3>
{{else if (eq this.tag "h4")}}
  <h4 class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</h4>
{{else if (eq this.tag "h5")}}
  <h5 class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</h5>
{{else if (eq this.tag "h6")}}
  <h6 class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</h6>
{{else if (eq this.tag "p")}}
  <p class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</p>
{{else if (eq this.tag "span")}}
  <span class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</span>
{{else if (eq this.tag "code")}}
  <code class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</code>
{{else if (eq this.tag "pre")}}
  <pre class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</pre>
{{else}}
  <div class={{this.classNames}} {{style color=this.customColor}} ...attributes>{{yield}}</div>
{{/if}}