<div class="dummy-color-card" style={{this.cardStyle}}>
  <div class="dummy-color-card__color-preview"></div>
  <div class="dummy-color-card__color-name">{{this.colorName}}</div>
  <ul class="dummy-color-card__color-vars">
    <li>
      <span>CSS variable: </span>
      <code>--{{this.cssVariable}}</code>
    </li>
    {{#if this.cssHelper}}
      <li>
        <span>CSS helper:</span>
        <code>.{{this.cssHelper}}</code>
      </li>
    {{/if}}
    <li>
      <span>HEX value:</span>
      <code>{{this.hexValue}}</code>
    </li>
  </ul>
</div>