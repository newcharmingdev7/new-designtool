{{page-title "Stepper Indicator Component"}}

<Shw::Text::H1>Stepper Indicator Component</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Status</Shw::Text::H2>

  <Shw::Sample::Grid @title="Default" @columns={{6}} as |SG|>
    {{#each @model.STEP_STATUSES as |status|}}
      <SG.Item @label={{capitalize status}}>
        <Hds::Stepper::Step::Indicator @status={{status}} @text="1" />
      </SG.Item>
    {{/each}}
  </Shw::Sample::Grid>

  <Shw::Sample::Grid @columns={{6}} as |SG|>
    <SG.Title>Interactive</SG.Title>
    {{#each @model.STEP_STATUSES as |status|}}
      {{#each @model.STATES as |state|}}
        <SG.Item @label="{{capitalize status}}/{{state}}">
          <Hds::Stepper::Step::Indicator
            @status={{status}}
            @text="1"
            @isInteractive={{true}}
            mock-state-value={{state}}
          />
        </SG.Item>
      {{/each}}
      <SG.Item />
      <SG.Item />
      <SG.Item />
    {{/each}}
  </Shw::Sample::Grid>

  <Shw::Text::H2>Task</Shw::Text::H2>

  <Shw::Sample::Grid @title="Default" @columns={{6}} as |SG|>
    {{#each @model.TASK_STATUSES as |status|}}
      <SG.Item @label={{capitalize status}}>
        <Hds::Stepper::Task::Indicator @status={{status}} @text="1" />
      </SG.Item>
    {{/each}}
  </Shw::Sample::Grid>

  <Shw::Sample::Grid @columns={{6}} as |SG|>
    <SG.Title>Interactive</SG.Title>
    {{#each @model.TASK_STATUSES as |status|}}
      {{#each @model.STATES as |state|}}
        <SG.Item @label="{{capitalize status}}/{{state}}">
          <Hds::Stepper::Task::Indicator @status={{status}} @isInteractive={{true}} mock-state-value={{state}} />
        </SG.Item>
      {{/each}}
      <SG.Item />
      <SG.Item />
      <SG.Item />
    {{/each}}
  </Shw::Sample::Grid>
</section>