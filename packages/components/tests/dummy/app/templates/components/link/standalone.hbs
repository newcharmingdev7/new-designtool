            <Hds::Link::Standalone
              @icon="plus"
              @text={{capitalize state}}
              @size={{size}}
              @color={{color}}
              class="is-{{state}}"
              href="../components/link"
            />
          </div>
        {{/each}}
      {{/each}}
    {{/each}}
  </div>
