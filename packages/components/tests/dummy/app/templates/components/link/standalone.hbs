{{page-title "Link::Standalone component"}}

<Shw::Text::H1>Link::Standalone</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Generated element</Shw::Text::H2>

  <Shw::Sample::Flex as |SF|>
    <SF.Item>
      <Shw::Sample::Label>with
        <code>@href</code>
        ⇒
        <code>&lt;a&gt;</code></Shw::Sample::Label>
      <Hds::Link::Standalone @icon="plus" @text="Lorem ipsum dolor" @color="primary" @href="#" />
    </SF.Item>
    <SF.Item>
      <Shw::Sample::Label>with
        <code>@route</code>
        ⇒
        <code>&lt;LinkTo&gt;</code>
        ⇒
        <code>&lt;a&gt;</code></Shw::Sample::Label>
      <Hds::Link::Standalone @icon="plus" @text="Lorem ipsum dolor" @color="primary" @route="index" />
    </SF.Item>
  </Shw::Sample::Flex>

  <Shw::Text::H2>Content</Shw::Text::H2>

  <Shw::Sample::Flex as |SF|>
    <SF.Item>
      <Hds::Link::Standalone @icon="plus" @text="Text & leading icon" @href="../components/link" />
    </SF.Item>
    <SF.Item>
      <Hds::Link::Standalone
        @icon="arrow-right"
        @text="Text & trailing icon"
        @href="../components/link"
        @iconPosition="trailing"
      />
    </SF.Item>
    <SF.Item {{style width="200px"}}>
      <Hds::Link::Standalone
        @icon="plus"
        @text="Very long text that might wrap for multiple lines"
        @href="../components/link"
      />
    </SF.Item>
  </Shw::Sample::Flex>

  <Shw::Text::H2>Sizes</Shw::Text::H2>

  <Shw::Sample::Flex as |SF|>
    {{#each @model.SIZES as |size|}}
      <SF.Item>
        <Hds::Link::Standalone @icon="plus" @text={{capitalize size}} @size={{size}} @route="components.link" />
      </SF.Item>
    {{/each}}
  </Shw::Sample::Flex>

  <Shw::Text::H2>States (in each size)</Shw::Text::H2>

  {{#each @model.COLORS as |color|}}
    <Shw::Text::H3>{{capitalize color}}</Shw::Text::H3>
    <Shw::Sample::Grid @columns={{4}} {{style width="fit-content"}} as |SG|>
      {{#each @model.SIZES as |size|}}
        {{#each @model.STATES as |state|}}
          <SG.Item @label="{{capitalize size}}/{{capitalize state}}">
            <Hds::Link::Standalone
              @icon="plus"
              @text={{capitalize state}}
              @size={{size}}
              @color={{color}}
              @href="../components/link"
              mock-state-value={{state}}
            />
          </SG.Item>
        {{/each}}
      {{/each}}
    </Shw::Sample::Grid>
  {{/each}}
</section>