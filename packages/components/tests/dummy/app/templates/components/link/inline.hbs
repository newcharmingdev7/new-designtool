{{page-title "Link::Inline component"}}

<Shw::Text::H1>Link::Inline</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Generated element</Shw::Text::H2>

  <Shw::Sample::Flex as |SF|>
    <SF.Item>
      <Shw::Sample::Label>with
        <code>@href</code>
        ⇒
        <code>&lt;a&gt;</code></Shw::Sample::Label>
      <div class="hds-typography-body-300">
        <Hds::Link::Inline @color="primary" @href="#">Lorem ipsum dolor</Hds::Link::Inline>
      </div>
    </SF.Item>
    <SF.Item>
      <Shw::Sample::Label>with
        <code>@route</code>
        ⇒
        <code>&lt;LinkTo&gt;</code>
        ⇒
        <code>&lt;a&gt;</code></Shw::Sample::Label>
      <div class="hds-typography-body-300">
        <Hds::Link::Inline @color="primary" @route="index">Lorem ipsum dolor</Hds::Link::Inline>
      </div>
    </SF.Item>
  </Shw::Sample::Flex>

  <Shw::Text::H2>Content</Shw::Text::H2>

  <Shw::Sample::Flex as |SF|>
    <SF.Item>
      <div class="hds-typography-body-300">
        <Hds::Link::Inline @color="primary" @href="#">Only text</Hds::Link::Inline>
      </div>
    </SF.Item>
    <SF.Item>
      <div class="hds-typography-body-300">
        <Hds::Link::Inline @color="primary" @icon="globe" @iconPosition="leading" @href="#">Text + leading icon</Hds::Link::Inline>
      </div>
    </SF.Item>
    <SF.Item>
      <div class="hds-typography-body-300">
        <Hds::Link::Inline @color="primary" @icon="arrow-right-circle" @iconPosition="trailing" @href="#">Text +
          trailing icon</Hds::Link::Inline>
      </div>
    </SF.Item>
  </Shw::Sample::Flex>

  <Shw::Sample::Flex as |SF|>
    <SF.Item>
      <div class="hds-typography-body-100">
        Lorem
        <Hds::Link::Inline @color="primary" @icon="globe" @iconPosition="leading" @href="#">ipsum dolor</Hds::Link::Inline>
        sit amet
        <Hds::Link::Inline @color="primary" @icon="arrow-right-circle" @iconPosition="trailing" @href="#">consectetur
          adipiscing</Hds::Link::Inline>
        elit.
      </div>
      <div class="hds-typography-body-200">
        Lorem
        <Hds::Link::Inline @color="primary" @icon="globe" @iconPosition="leading" @href="#">ipsum dolor</Hds::Link::Inline>
        sit amet
        <Hds::Link::Inline @color="primary" @icon="arrow-right-circle" @iconPosition="trailing" @href="#">consectetur
          adipiscing</Hds::Link::Inline>
        elit.
      </div>
      <div class="hds-typography-body-300">
        Lorem
        <Hds::Link::Inline @color="primary" @icon="globe" @iconPosition="leading" @href="#">ipsum dolor</Hds::Link::Inline>
        sit amet
        <Hds::Link::Inline @color="primary" @icon="arrow-right-circle" @iconPosition="trailing" @href="#">consectetur
          adipiscing</Hds::Link::Inline>
        elit.
      </div>
    </SF.Item>
  </Shw::Sample::Flex>

  <Shw::Sample::Flex as |SF|>
    <SF.Item @label="within text block">
      <div class="hds-typography-body-300">
        <Hds::Link::Inline @color="primary" @href="#">Lorem ipsum dolor sit amet</Hds::Link::Inline>, consectetur
        adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore.
      </div>
    </SF.Item>
    <SF.Item @label="span two lines">
      <div class="hds-typography-body-300">
        Lorem ipsum dolor sit amet,
        <Hds::Link::Inline @color="primary" @href="#">consectetur adipiscing elit</Hds::Link::Inline>, sed do eiusmod
        tempor incididunt ut labore et dolore.
      </div>
    </SF.Item>
    <SF.Item @label="span two lines and overlaps">
      <div class="hds-typography-body-300">
        Lorem ipsum dolor sit amet,
        <Hds::Link::Inline @color="primary" @href="#">consectetur adipiscing elit, sed do eiusmod tempor</Hds::Link::Inline>
        incididunt ut labore et dolore.
      </div>
    </SF.Item>
  </Shw::Sample::Flex>

  <Shw::Text::H2>States</Shw::Text::H2>

  {{#each @model.COLORS as |color|}}
    <Shw::Text::H3>{{capitalize color}}</Shw::Text::H3>
    <Shw::Sample::Grid @columns={{4}} {{style width="fit-content"}} as |SG|>
      {{#each @model.STATES as |state|}}
        <SG.Item @label="{{capitalize state}}" class="shw-component-link-inline-state-samples">
          <div class="hds-typography-body-300">This is the
            <Hds::Link::Inline
              @color={{color}}
              @href="/components/link/inline"
              mock-state-value={{state}}
            >{{state}}</Hds::Link::Inline>
            state
          </div>
          <div class="hds-typography-body-300">This is the
            <Hds::Link::Inline
              @color={{color}}
              @href="/components/link/inline"
              @icon="external-link"
              @iconPosition="trailing"
              mock-state-value={{state}}
            >{{state}}</Hds::Link::Inline>
            state
          </div>
        </SG.Item>
      {{/each}}
    </Shw::Sample::Grid>
  {{/each}}

</section>