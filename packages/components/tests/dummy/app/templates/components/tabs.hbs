{{page-title "Tabs Component"}}

<Shw::Text::H1>Tabs</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Tab</Shw::Text::H2>

  <button id="shw-component-toggle-highlight" type="button" {{on "click" this.toggleHighlight}}>
    {{if this.showHighlight "Hide" "Show"}}
    layout highlight
  </button>

  <div class="{{if this.showHighlight 'shw-component-tabs-layout-highlight'}}">

    <Shw::Text::H3>Content</Shw::Text::H3>

    <Shw::Flex as |SF|>
      <SF.Item @label="Text only">
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab>Lorem ipsum</Hds::Tabs::Tab>
        </ul>
      </SF.Item>
      <SF.Item @label="Icon + Text">
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab @icon="hexagon">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
      </SF.Item>
      <SF.Item @label="Text + Counter">
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab @count="10">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
      </SF.Item>
      <SF.Item @label="Icon + Text + Counter">
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab @icon="hexagon" @count="10">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
      </SF.Item>
    </Shw::Flex>

    <Shw::Text::H3>States</Shw::Text::H3>

    <Shw::Flex as |SF|>
      <SF.Item @label="Default">
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab>Lorem ipsum</Hds::Tabs::Tab>
        </ul>
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab @icon="hexagon" @count="10">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
      </SF.Item>
      <SF.Item @label="Hover">
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab mock-state-value="hover">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab @icon="hexagon" @count="10" mock-state-value="hover">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
      </SF.Item>
      <SF.Item @label="Focus">
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab mock-state-value="focus" mock-state-selector="button">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
        <ul class="shw-component-tabs-sample-ul-wrapper">
          <Hds::Tabs::Tab @icon="hexagon" @count="10" mock-state-value="focus" mock-state-selector="button">Lorem ipsum</Hds::Tabs::Tab>
        </ul>
      </SF.Item>
    </Shw::Flex>

  </div>

  <Shw::Text::H2>Panel</Shw::Text::H2>

  <Hds::Tabs::Panel>
    <Shw::Placeholder @text="Panel with generic content" @height="50" @background="#eee" />
  </Hds::Tabs::Panel>

  <Shw::Text::H2>Tabs</Shw::Text::H2>

  <Shw::Text::Body>Basic usage</Shw::Text::Body>

  <Hds::Tabs as |T|>
    <T.Tab>One</T.Tab>
    <T.Tab>Two</T.Tab>
    <T.Tab>Three</T.Tab>

    <T.Panel>
      <Shw::Placeholder @height="50" @background="#eee">
        <span>Content one with <a href="#">link to test tabbing</a></span>
      </Shw::Placeholder>
    </T.Panel>
    <T.Panel><Shw::Placeholder @text="Content two" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content three" @height="50" @background="#eee" /></T.Panel>
  </Hds::Tabs>

  <Shw::Text::Body>With optional icon and badge count</Shw::Text::Body>

  <Hds::Tabs as |T|>
    <T.Tab @count="5">One</T.Tab>
    <T.Tab @icon="info">Two</T.Tab>
    <T.Tab>Three</T.Tab>
    <T.Tab @icon="alert-triangle" @count="5">Four</T.Tab>

    <T.Panel><Shw::Placeholder @text="Content one" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content two" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content three" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content four" @height="50" @background="#eee" /></T.Panel>
  </Hds::Tabs>

  <Shw::Text::Body>With pre-selected tab</Shw::Text::Body>

  <Hds::Tabs as |T|>
    <T.Tab>One</T.Tab>
    <T.Tab>Two</T.Tab>
    <T.Tab @isSelected={{true}}>Three (selected on page load)</T.Tab>

    <T.Panel><Shw::Placeholder @text="Content one" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content two" @height="50" @background="#eee" /></T.Panel>
    <T.Panel>
      <Shw::Placeholder @text="Content three (displayed on page load)" @height="50" @background="#eee" />
    </T.Panel>
  </Hds::Tabs>

  <Shw::Text::Body>With overflowing tabs</Shw::Text::Body>

  <Hds::Tabs as |T|>
    <T.Tab>One one-thousand</T.Tab>
    <T.Tab>Two one-thousand</T.Tab>
    <T.Tab>Three one-thousand</T.Tab>
    <T.Tab>Four one-thousand</T.Tab>
    <T.Tab>Five one-thousand</T.Tab>
    <T.Tab>Six one-thousand</T.Tab>
    <T.Tab>Seven one-thousand</T.Tab>
    <T.Tab>Eight one-thousand</T.Tab>
    <T.Tab>Nine one-thousand</T.Tab>
    <T.Tab>Ten one-thousand</T.Tab>

    <T.Panel><Shw::Placeholder @text="Content one" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content two" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content three" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content four" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content five" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content six" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content seven" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content eight" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content nine" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content ten" @height="50" @background="#eee" /></T.Panel>
  </Hds::Tabs>

  <Shw::Text::Body>Invoking a callback function when a tab is clicked</Shw::Text::Body>

  <Hds::Tabs @onClickTab={{this.logClickedTab}} as |T|>
    <T.Tab>One</T.Tab>
    <T.Tab>Two</T.Tab>
    <T.Tab>Three</T.Tab>

    <T.Panel><Shw::Placeholder @text="Content one" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content two" @height="50" @background="#eee" /></T.Panel>
    <T.Panel><Shw::Placeholder @text="Content three" @height="50" @background="#eee" /></T.Panel>
  </Hds::Tabs>

</section>