      <div class="shw-component-sim-side-nav-header">
        <Hds::SideNav::Header>
          <:logo>
            <Shw::Placeholder @width="48px" @height="48px" @text="logo" @background="#e4e4e4" />
          </:logo>
          <:actions>
            <Shw::Placeholder @height="36px" @width="60px" @text="action" @background="#e4e4e4" />
            <Shw::Placeholder @height="36px" @width="60px" @text="action" @background="#e4e4e4" />
          </:actions>
        </Hds::SideNav::Header>
      </div>
    </SF.Item>
    <SF.Item @label="HomeLink + Dropdowns">
      <div class="shw-component-sim-side-nav-header">
        <Hds::SideNav::Header>
          <:logo>
            <Hds::SideNav::HomeLink @icon="hashicorp" @text="HashiCorp" @href="#" />
          </:logo>
          <:actions>
