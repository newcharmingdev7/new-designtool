{{page-title "SideNav Component"}}

<Shw::Text::H1>SideNav</Shw::Text::H1>

<section data-test-percy>
  <Shw::Text::H2>SideNav::Wrapper:</Shw::Text::H2>

  <Shw::Flex as |SF|>
    <SF.Item @label="Header + Body + Footer">
      <div class="shw-component-sim-side-nav-wrapper">
        <Hds::SideNav::Wrapper>
          <:header>
            <Shw::Placeholder @height="72px" @text="header" @background="#e4e4e4" />
          </:header>
          <:body>
            <Shw::Placeholder @height="300px" @text="body" @background="#e4e4e4" />
          </:body>
          <:footer>
            <Shw::Placeholder @height="36px" @text="footer" @background="#e4e4e4" />
          </:footer>
        </Hds::SideNav::Wrapper>
      </div>
    </SF.Item>
    <SF.Item @label="Header (with extra) + Body + Footer">
      <div class="shw-component-sim-side-nav-wrapper">
        <Hds::SideNav::Wrapper>
          <:header>
            <Shw::Placeholder @height="72px" @text="header" @background="#e4e4e4" />
            <Shw::Placeholder @height="60px" @text="extra content" @background="#e4c5f3" />
          </:header>
