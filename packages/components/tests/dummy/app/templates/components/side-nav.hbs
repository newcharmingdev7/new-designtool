    <S.Link @label="Terraform" @icon="terraform" @href="#" />
    <S.Link @label="Vagrant" @icon="vagrant" @badge="Alpha" @href="#" />
    <S.Link @label="Waypoint" @icon="waypoint" @badge="Alpha" @href="#" />
  </Hds::SideNav::Section>
