{{page-title "SideNav Component"}}

<Shw::Text::H1>SideNav</Shw::Text::H1>

<section data-test-percy>
  <Shw::Text::H2>Standalone cases:</Shw::Text::H2>

  <table class="shw-side-nav-table-layout">
    <tbody>
      <tr>
        <th scope="row">
          with just text
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link @label="Boundary" @href="#" />
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with icon + text
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link @icon="boundary" @label="Boundary" @href="#" />
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with icon + text + badge
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link @icon="boundary" @label="Boundary" @badge="Alpha" />
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with icon + text + badgecount
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link @icon="boundary" @label="Boundary" @count="3" />
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with icon + text + badge + badgecount
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link @icon="boundary" @label="Boundary" @count="3" @badge="Alpha" />
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with icon + long text (eg. 2 lines)
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link
              @icon="boundary"
              @label="Boundary Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
            />
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with icon + long text (eg. 2 lines) + badge + badgecount
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link
              @icon="boundary"
              @label="Boundary Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
              @count="3"
              @badge="Alpha"
            />
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with icon + custom passed in badge + badgecount
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Link @icon="boundary" @label="Boundary">
              <Hds::BadgeCount @type="inverted" @size="small" @color="neutral-dark-mode" @text="3" />
              <Hds::Badge @type="inverted" @size="small" @color="success" @text="Beta" />
            </Hds::SideNav::Section::Link>
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          with just text
        </th>
        <td>
          <div class="shw-side-nav-box">
            <Hds::SideNav::Section::Item>Non-interactive content</Hds::SideNav::Section::Item>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</section>

