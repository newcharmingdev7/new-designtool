<section data-test-percy>
  <Shw::Text::H3>Hds::SideNav::Header</Shw::Text::H3>

  <Shw::Text::Body>Layout wrapper used within the :header named block. Provides layout for the HomeLink and other header
    content such as dropdowns.</Shw::Text::Body>

  <div class="shw-component-side-nav-box">
    <Hds::SideNav::Header>
      <Hds::SideNav::HomeLink @icon="hashicorp" @text="HashiCorp" @href="#" />

      <Hds::Dropdown as |dd|>
        <dd.ToggleIcon @icon="help" @text="settings menu" />
        <dd.Title @text="Signed In" />
        <dd.Description @text="email@domain.com" />
        <dd.Separator />
        <dd.Interactive @href="#" @text="Settings and Preferences" />
      </Hds::Dropdown>

      <Hds::Dropdown as |dd|>
        <dd.ToggleIcon @icon="user" @text="user menu" />
        <dd.Title @text="Signed In" />
        <dd.Description @text="email@domain.com" />
        <dd.Interactive @href="#" @text="Account Settings" />
      </Hds::Dropdown>
    </Hds::SideNav::Header>
  </div>
</section>

<section data-test-percy>
  <Shw::Text::H3>Hds::SideNav::HomeLink</Shw::Text::H3>
  <Shw::Text::Body>
    HomeLink used as the first child of the Hds::SideNav::Header layout component which goes in the :header named block.
  </Shw::Text::Body>

  <Shw::Grid @columns={{4}} @label="States" as |SG|>
    <SG.Item @label="default:">
      <Hds::SideNav::HomeLink @icon="hashicorp" @text="HashiCorp" @href="#" />
    </SG.Item>

    <SG.Item @label="hover:">
      <Hds::SideNav::HomeLink @icon="hashicorp" @text="HashiCorp" @href="#" class="hover" />
    </SG.Item>

    <SG.Item @label="active:">
      <Hds::SideNav::HomeLink @icon="hashicorp" @text="HashiCorp" @href="#" class="active" />
    </SG.Item>

    <SG.Item @label="focused:">
      <Hds::SideNav::HomeLink @icon="hashicorp" @text="HashiCorp" @href="#" class="mock-focus" />
    </SG.Item>
  </Shw::Grid>
</section>

