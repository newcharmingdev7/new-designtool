{{page-title "SensitiveInput Component"}}

<Shw::Text::H1>SensitiveInput</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>"Base" control</Shw::Text::H2>

  <Shw::Text::H3>Interaction status</Shw::Text::H3>

  <Shw::Text::H4>Single line</Shw::Text::H4>

  <Shw::Flex as |SF|>
    <SF.Item @label="Default">
      <Hds::Form::SensitiveInput::Base />
    </SF.Item>
    <SF.Item @label="With placeholder">
      <Hds::Form::SensitiveInput::Base placeholder="Lorem ipsum dolor" />
    </SF.Item>
    <SF.Item @label="With value">
      <Hds::Form::SensitiveInput::Base @value="Lorem ipsum dolor" />
    </SF.Item>
    <SF.Item @label="With obfuscated value">
      <Hds::Form::SensitiveInput::Base @isObfuscated={{false}} @value="Lorem ipsum dolor" />
    </SF.Item>
  </Shw::Flex>

  <Shw::Text::H4>Multiline</Shw::Text::H4>

  <Shw::Flex as |SF|>
    <SF.Item @label="Default">
      <Hds::Form::SensitiveInput::Base @isMultiline={{true}} />
    </SF.Item>
    <SF.Item @label="With placeholder">
      <Hds::Form::SensitiveInput::Base @isMultiline={{true}} placeholder="Lorem ipsum dolor" />
    </SF.Item>
    <SF.Item @label="With value">
      <Hds::Form::SensitiveInput::Base @isMultiline={{true}} @value="Lorem ipsum dolor" />
    </SF.Item>
    <SF.Item @label="With obfuscated value">
      <Hds::Form::SensitiveInput::Base @isMultiline={{true}} @isObfuscated={{false}} @value="Lorem ipsum dolor" />
    </SF.Item>
  </Shw::Flex>

  <Shw::Divider @level="2" />

  <Shw::Text::H3>States</Shw::Text::H3>

  <Shw::Text::H4>Single line</Shw::Text::H4>

  {{#let (array "base" "invalid" "readonly") as |variants|}}
    {{#each variants as |variant|}}
      <Shw::Grid @columns={{3}} as |SG|>
        {{#each @model.STATES as |state|}}
          <SG.Item
            @label="{{capitalize variant}} / {{capitalize state}}"
            mock-state-value={{state}}
            mock-state-selector="input"
          >
            <Shw::Flex @direction="column" as |SF|>
              <SF.Item>
                <Hds::Form::SensitiveInput::Base
                  disabled={{if (eq variant "disabled") "disabled"}}
                  readonly={{if (eq variant "readonly") "readonly"}}
                  @value="Lorem ipsum dolor"
                  @isInvalid={{if (eq variant "invalid") true}}
                />
              </SF.Item>
            </Shw::Flex>
          </SG.Item>
        {{/each}}
      </Shw::Grid>
    {{/each}}
  {{/let}}

  <Shw::Text::H4>Multiline</Shw::Text::H4>

  {{#let (array "base" "invalid" "readonly") as |variants|}}
    {{#each variants as |variant|}}
      <Shw::Grid @columns={{3}} as |SG|>
        {{#each @model.STATES as |state|}}
          <SG.Item
            @label="{{capitalize variant}} / {{capitalize state}}"
            mock-state-value={{state}}
            mock-state-selector="input"
          >
            <Shw::Flex @direction="column" as |SF|>
              <SF.Item>
                <Hds::Form::SensitiveInput::Base
                  disabled={{if (eq variant "disabled") "disabled"}}
                  readonly={{if (eq variant "readonly") "readonly"}}
                  @isMultiline={{true}}
                  @value="Lorem ipsum dolor"
                  @isInvalid={{if (eq variant "invalid") true}}
                />
              </SF.Item>
            </Shw::Flex>
          </SG.Item>
        {{/each}}
      </Shw::Grid>
    {{/each}}
  {{/let}}

  <Shw::Divider />

  <Shw::Text::H2>"Field" control</Shw::Text::H2>

  <Shw::Text::H3>Content</Shw::Text::H3>

  <Shw::Text::H4>Single line</Shw::Text::H4>

  <Shw::Grid @columns="3" as |SG|>
    <SG.Item @label="Only label">
      <Hds::Form::SensitiveInput::Field @value="Lorem ipsum dolor" as |F|>
        <F.Label>This is the label text</F.Label>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Helper text">
      <Hds::Form::SensitiveInput::Field @value="Lorem ipsum dolor" as |F|>
        <F.Label>This is the label text</F.Label>
        <F.HelperText>This is the helper text</F.HelperText>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    {{! left empty on purpose }}
    <SG.Item />
    <SG.Item @label="Label + Error">
      <Hds::Form::SensitiveInput::Field @value="Lorem ipsum dolor" @isInvalid={{true}} as |F|>
        <F.Label>This is the label</F.Label>
        <F.Error>This is the error</F.Error>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Helper text + Error">
      <Hds::Form::SensitiveInput::Field @value="Lorem ipsum dolor" @isInvalid={{true}} as |F|>
        <F.Label>This is the label</F.Label>
        <F.HelperText>This is the helper text</F.HelperText>
        <F.Error>This is the error</F.Error>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Helper text + Errors">
      <Hds::Form::SensitiveInput::Field @value="Lorem ipsum dolor" @isInvalid={{true}} as |F|>
        <F.Label>This is the label</F.Label>
        <F.HelperText>This is the helper text</F.HelperText>
        <F.Error as |E|>
          <E.Message>First error message</E.Message>
          <E.Message>Second error message</E.Message>
        </F.Error>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
  </Shw::Grid>

  <Shw::Text::H4>Multiline</Shw::Text::H4>

  <Shw::Grid @columns="3" as |SG|>
    <SG.Item @label="Only label">
      <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Lorem ipsum dolor" as |F|>
        <F.Label>This is the label text</F.Label>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Helper text">
      <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Lorem ipsum dolor" as |F|>
        <F.Label>This is the label text</F.Label>
        <F.HelperText>This is the helper text</F.HelperText>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    {{! left empty on purpose }}
    <SG.Item />
    <SG.Item @label="Label + Error">
      <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Lorem ipsum dolor" @isInvalid={{true}} as |F|>
        <F.Label>This is the label</F.Label>
        <F.Error>This is the error</F.Error>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Helper text + Error">
      <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Lorem ipsum dolor" @isInvalid={{true}} as |F|>
        <F.Label>This is the label</F.Label>
        <F.HelperText>This is the helper text</F.HelperText>
        <F.Error>This is the error</F.Error>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Helper text + Errors">
      <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Lorem ipsum dolor" @isInvalid={{true}} as |F|>
        <F.Label>This is the label</F.Label>
        <F.HelperText>This is the helper text</F.HelperText>
        <F.Error as |E|>
          <E.Message>First error message</E.Message>
          <E.Message>Second error message</E.Message>
        </F.Error>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
  </Shw::Grid>

  <Shw::Divider @level="2" />

  <Shw::Text::H3>Required and optional</Shw::Text::H3>

  <Shw::Text::H4>Single line</Shw::Text::H4>

  <Shw::Grid @columns={{3}} as |SG|>
    <SG.Item @label="Label + Required">
      <Hds::Form::SensitiveInput::Field @value="Lorem ipsum dolor" @isRequired={{true}} as |F|>
        <F.Label>This is the label text</F.Label>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Optional">
      <br />
      <Hds::Form::SensitiveInput::Field @value="Lorem ipsum dolor" @isOptional={{true}} as |F|>
        <F.Label>This is the label text</F.Label>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
  </Shw::Grid>

  <Shw::Text::H4>Multiline</Shw::Text::H4>

  <Shw::Grid @columns={{3}} as |SG|>
    <SG.Item @label="Label + Required">
      <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Lorem ipsum dolor" @isRequired={{true}} as |F|>
        <F.Label>This is the label text</F.Label>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
    <SG.Item @label="Label + Optional">
      <br />
      <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Lorem ipsum dolor" @isOptional={{true}} as |F|>
        <F.Label>This is the label text</F.Label>
      </Hds::Form::SensitiveInput::Field>
    </SG.Item>
  </Shw::Grid>

  <Shw::Divider @level="2" />

  <Shw::Text::H3>Containers</Shw::Text::H3>

  <Shw::Text::H4>Single line</Shw::Text::H4>

  <Shw::Grid @columns={{3}} as |SG|>
    {{#let (array "block" "flex" "grid") as |displays|}}
      {{#each displays as |display|}}
        <SG.Item>
          <Shw::Label>Parent with <code>display: {{display}}</code></Shw::Label>
          <Shw::Flex as |SF|>
            <SF.Item @grow={{true}} {{style display=display}}>
              <Hds::Form::SensitiveInput::Field @value="Default width" as |F|>
                <F.Label>This is the label</F.Label>
                <F.HelperText>This is the helper text</F.HelperText>
              </Hds::Form::SensitiveInput::Field>
            </SF.Item>
            <SF.Item @grow={{true}} {{style display=display}}>
              <Hds::Form::SensitiveInput::Field @value="Custom width" @width="120px" @isInvalid={{true}} as |F|>
                <F.Label>This is the label text that should go on multiple lines</F.Label>
                <F.HelperText>This is the helper text that should go on multiple lines</F.HelperText>
                <F.Error as |E|>
                  <E.Message>This is the first error text</E.Message>
                  <E.Message>This is the second error text that should go on multiple lines</E.Message>
                </F.Error>
              </Hds::Form::SensitiveInput::Field>
            </SF.Item>
          </Shw::Flex>
        </SG.Item>
      {{/each}}
    {{/let}}
  </Shw::Grid>

  <Shw::Text::H4>Multiline</Shw::Text::H4>

  <Shw::Grid @columns={{3}} as |SG|>
    {{#let (array "block" "flex" "grid") as |displays|}}
      {{#each displays as |display|}}
        <SG.Item>
          <Shw::Label>Parent with <code>display: {{display}}</code></Shw::Label>
          <Shw::Flex as |SF|>
            <SF.Item @grow={{true}} {{style display=display}}>
              <Hds::Form::SensitiveInput::Field @isMultiline={{true}} @value="Default width" as |F|>
                <F.Label>This is the label</F.Label>
                <F.HelperText>This is the helper text</F.HelperText>
              </Hds::Form::SensitiveInput::Field>
            </SF.Item>
            <SF.Item @grow={{true}} {{style display=display}}>
              <Hds::Form::SensitiveInput::Field
                @isMultiline={{true}}
                @value="Custom width"
                @width="120px"
                @height="150px"
                @isInvalid={{true}}
                as |F|
              >
                <F.Label>This is the label text that should go on multiple lines</F.Label>
                <F.HelperText>This is the helper text that should go on multiple lines</F.HelperText>
                <F.Error as |E|>
                  <E.Message>This is the first error text</E.Message>
                  <E.Message>This is the second error text that should go on multiple lines</E.Message>
                </F.Error>
              </Hds::Form::SensitiveInput::Field>
            </SF.Item>
          </Shw::Flex>
        </SG.Item>
      {{/each}}
    {{/let}}
  </Shw::Grid>

</section>