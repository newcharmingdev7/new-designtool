{{page-title "ButtonSet Component"}}

<Shw::Text::H1>ButtonSet</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Content</Shw::Text::H2>

  <Shw::Flex @direction="column" as |SF|>
    <SF.Item @label="Default">
      <Hds::ButtonSet>
        <Hds::Button @text="Submit" type="submit" />
        <Hds::Button @text="Cancel" @color="secondary" @href="https://hashicorp.com" />
      </Hds::ButtonSet>
    </SF.Item>
    <SF.Item @label="Parent with max-width">
      <Shw::Outliner {{style width="300px"}}>
        <Hds::ButtonSet>
          <Hds::Button @text="This is a very long text" type="submit" />
          <Hds::Button @text="This is also a very long text" @color="secondary" @href="https://hashicorp.com" />
        </Hds::ButtonSet>
      </Shw::Outliner>
    </SF.Item>
  </Shw::Flex>

</section>