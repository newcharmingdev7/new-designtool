{{page-title "AppFooter Component"}}

<Shw::Text::H1>AppFooter</Shw::Text::H1>

<section data-test-percy>
  <div class="{{if this.showHighlight 'shw-component-app-footer-layout-highlight'}}">
    <Shw::Text::H2>Content</Shw::Text::H2>

    <button type="button" {{on "click" this.toggleHighlight}}>
      {{if this.showHighlight "Hide" "Show"}}
      layout highlight
    </button>

    <Shw::Text::H3>With only generic content</Shw::Text::H3>

    <Hds::AppFooter>
      <:topContent>
        <Shw::Placeholder @height="2em" @text="top content" @background="#e4e4e4" />
      </:topContent>

      <:listItems>
        <Hds::AppFooter::Item>
          <Shw::Placeholder @height="2em" @text="list item" @background="#e4e4e4" />
        </Hds::AppFooter::Item>
      </:listItems>
    </Hds::AppFooter>

    <Shw::Text::H3>With minimal recommended content</Shw::Text::H3>

    <Hds::AppFooter>
      <:listItems>
        <Hds::AppFooter::LegalLinks />
        <Hds::AppFooter::Copyright />
      </:listItems>
    </Hds::AppFooter>

    <Shw::Text::H3>With typical custom content</Shw::Text::H3>

    <Hds::AppFooter>
      <:listItems>
        <Hds::AppFooter::StatusLink @status="OPERATIONAL" />
        <Hds::AppFooter::Link @href="https://cloud.hashicorp.com/docs/changelog">Changelog</Hds::AppFooter::Link>
        <Hds::AppFooter::LegalLinks />
        <Hds::AppFooter::Copyright />
      </:listItems>
    </Hds::AppFooter>

    <Shw::Text::H3>With custom “meta” (non-link) content</Shw::Text::H3>

    <Hds::AppFooter>
      <:listItems>
        <Hds::AppFooter::StatusLink @status="OPERATIONAL" />
        <Hds::AppFooter::LegalLinks />
        <Hds::AppFooter::Item>
          <Hds::Text::Body @tag="span" @size="100" @color="regular">v.01.15</Hds::Text::Body>
        </Hds::AppFooter::Item>
        <Hds::AppFooter::Item>
          <Hds::Text::Body @tag="span" @size="100" @color="regular">Product Name</Hds::Text::Body>
        </Hds::AppFooter::Item>
        <Hds::AppFooter::Item>
          <Hds::Text::Body @tag="span" @size="100" @color="regular">API: 1.02</Hds::Text::Body>
        </Hds::AppFooter::Item>
        <Hds::AppFooter::Copyright />
      </:listItems>
    </Hds::AppFooter>

    <Shw::Text::H3>With extra content above listItems content</Shw::Text::H3>

    <Hds::AppFooter>
      <:topContent>
        <Hds::Dropdown as |dd|>
          <dd.ToggleButton @text="Theme" @color="secondary" @size="small" />
          <dd.Interactive @icon="monitor" {{on "click" dd.close}} @text="System" />
          <dd.Interactive @icon="moon" {{on "click" dd.close}} @text="Dark" />
          <dd.Interactive @icon="sun" {{on "click" dd.close}} @text="Light" />
        </Hds::Dropdown>

        {{! <Hds::Form::Select::Field as |F|>
          <F.Label>Theme</F.Label>
          <F.Options>
            <option value="system">System</option>
            <option value="dark">Dark</option>
            <option value="light">Light</option>
          </F.Options>
        </Hds::Form::Select::Field> }}
      </:topContent>

      <:listItems>
        <Hds::AppFooter::StatusLink @status="OPERATIONAL" />
        <Hds::AppFooter::Link @href="https://cloud.hashicorp.com/docs/changelog">Changelog</Hds::AppFooter::Link>
        <Hds::AppFooter::LegalLinks />
        <Hds::AppFooter::Copyright />
      </:listItems>
    </Hds::AppFooter>

    <Shw::Divider />

    <Shw::Text::H2>Base components & child components</Shw::Text::H2>

    <button type="button" {{on "click" this.toggleHighlight}}>
      {{if this.showHighlight "Hide" "Show"}}
      layout highlight
    </button>

    <Shw::Text::H3>Hds::AppFooter::Item</Shw::Text::H3>

    <ul class="hds-app-footer__list">
      <Hds::AppFooter::Item>Item</Hds::AppFooter::Item>
    </ul>

    <Shw::Text::H3>Hds::AppFooter::Link</Shw::Text::H3>

    <Shw::Text::H4>States</Shw::Text::H4>

    <Shw::Flex {{style gap="2rem" justifyContent="space-between"}} as |SF|>
      {{#each @model.STATES as |state|}}
        <SF.Item @label={{state}}>
          <ul class="hds-app-footer__list">
            <Hds::AppFooter::Link @href="#" mock-state-value={{state}}>Link</Hds::AppFooter::Link>
          </ul>
        </SF.Item>
      {{/each}}
    </Shw::Flex>

    <Shw::Text::H3>Hds::AppFooter::StatusLink</Shw::Text::H3>

    <Shw::Text::H4>Status variants</Shw::Text::H4>

    <Shw::Flex {{style gap="2rem" justifyContent="space-between"}} as |SF|>
      {{#each-in @model.STATUSES as |status|}}
        <SF.Item @label={{status}}>
          <ul class="hds-app-footer__list">
            <Hds::AppFooter::StatusLink @status={{status}} />
          </ul>
        </SF.Item>
      {{/each-in}}
    </Shw::Flex>

    <Shw::Text::H4>With custom values</Shw::Text::H4>

    <Shw::Text::Body><strong>Custom values combined with a standard status</strong></Shw::Text::Body>

    <Shw::Flex {{style gap="2rem"}} as |SF|>
      <SF.Item @label="with custom text">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @status="OPERATIONAL" @text="Operativo" />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom icon color">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @status="OPERATIONAL" @statusIconColor="purple" />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom icon">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @status="OPERATIONAL" @statusIcon="cloud-check" />
        </ul>
      </SF.Item>
    </Shw::Flex>

    <Shw::Text::Body><strong>Custom values with no status</strong></Shw::Text::Body>
    <Shw::Flex {{style gap="2rem"}} as |SF|>
      <SF.Item @label="with custom icon and text">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @statusIcon="hashicorp" @text="HashiCorp" />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom icon, icon color, text, & href">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink
            @statusIcon="waypoint"
            @statusIconColor="var(--token-color-waypoint-brand)"
            @href="https://www.hashicorp.com/products/waypoint"
            @text="Waypoint"
          />
        </ul>
      </SF.Item>
    </Shw::Flex>

    <Shw::Text::H3>Hds::AppFooter::LegalLinks</Shw::Text::H3>

    <Shw::Flex {{style gap="2rem"}} @direction="column" as |SF|>
      <SF.Item @label="with default url for “Terms” link">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::LegalLinks />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom url for “Terms” link">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::LegalLinks @termsUrl="https://www.terraform.io/tfc-terms" />
        </ul>
      </SF.Item>
    </Shw::Flex>

    <Shw::Text::H3>Hds::AppFooter::Copyright</Shw::Text::H3>

    <ul class="hds-app-footer__list">
      <Hds::AppFooter::Copyright />
    </ul>
  </div>
</section>