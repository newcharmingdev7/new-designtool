{{page-title "AppFooter Component"}}

<Shw::Text::H1>AppFooter</Shw::Text::H1>

<section data-test-percy>
  <div class="{{if this.showHighlight 'shw-component-app-footer-layout-highlight'}}">
    <Shw::Text::H2>Content</Shw::Text::H2>

    <button type="button" {{on "click" this.toggleHighlight}}>
      {{if this.showHighlight "Hide" "Show"}}
      layout highlight
    </button>

    <Shw::Text::H3>With only generic content</Shw::Text::H3>

    <Hds::AppFooter as |AF|>
      <AF.ExtraContentBefore>
        <Shw::Placeholder @height="2em" @text="Extra Content Before" @background="#e4e4e4" />
      </AF.ExtraContentBefore>
      <AF.Item>
        <Shw::Placeholder @height="2em" @text="Item" @background="#e4e4e4" />
      </AF.Item>
      <AF.Item>
        <Shw::Placeholder @height="2em" @text="Item" @background="#e4e4e4" />
      </AF.Item>
      <AF.Item>
        <Shw::Placeholder @height="2em" @text="Item" @background="#e4e4e4" />
      </AF.Item>
      <AF.ExtraContentAfter>
        <Shw::Placeholder @height="2em" @text="Extra Content After" @background="#e4e4e4" />
      </AF.ExtraContentAfter>
    </Hds::AppFooter>

    <Shw::Text::H3>With minimal recommended content</Shw::Text::H3>

    <Hds::AppFooter as |AF|>
      <AF.LegalLinks />
    </Hds::AppFooter>

    <Shw::Text::H3>With StatusLink & custom Link content</Shw::Text::H3>

    <Hds::AppFooter as |AF|>
      <AF.StatusLink @status="operational" />
      <AF.Link @href="https://cloud.hashicorp.com/docs/changelog">Changelog</AF.Link>
      <AF.LegalLinks />
    </Hds::AppFooter>

    <Shw::Text::H3>With custom “meta” items (non-link) content</Shw::Text::H3>

    <Hds::AppFooter as |AF|>
      <AF.StatusLink @status="operational" />
      <AF.LegalLinks />
      <AF.Item>
        <Hds::Text::Body @tag="span" @size="100" @color="primary">v.01.15</Hds::Text::Body>
      </AF.Item>
      <AF.Item>
        <Hds::Text::Body @tag="span" @size="100" @color="primary">Product Name</Hds::Text::Body>
      </AF.Item>
      <AF.Item>
        <Hds::Text::Body @tag="span" @size="100" @color="primary">API: 1.02</Hds::Text::Body>
      </AF.Item>
    </Hds::AppFooter>

    <Shw::Text::H3>With theme selector as Extra Content Before</Shw::Text::H3>

    <Hds::AppFooter as |AF|>
      <AF.ExtraContentBefore>
        <Hds::Dropdown as |dd|>
          <dd.ToggleButton @text="Theme" @color="secondary" @size="small" />
          <dd.Interactive @icon="monitor" {{on "click" dd.close}} @text="System" />
          <dd.Interactive @icon="moon" {{on "click" dd.close}} @text="Dark" />
          <dd.Interactive @icon="sun" {{on "click" dd.close}} @text="Light" />
        </Hds::Dropdown>
      </AF.ExtraContentBefore>
      <AF.StatusLink @status="operational" />
      <AF.Link @href="https://cloud.hashicorp.com/docs/changelog">Changelog</AF.Link>
      <AF.LegalLinks />
    </Hds::AppFooter>

    <Shw::Divider />

    <Shw::Text::H2>Layout</Shw::Text::H2>

    <button type="button" {{on "click" this.toggleHighlight}}>
      {{if this.showHighlight "Hide" "Show"}}
      layout highlight
    </button>

    <Shw::Text::H4>Desktop view</Shw::Text::H4>

    <div class="shw-component-app-footer-desktop-view">
      <Hds::AppFooter as |AF|>
        <AF.ExtraContentBefore>
          <Shw::Placeholder @height="2em" @text="Before" @background="#FF7575" />
        </AF.ExtraContentBefore>

        <AF.StatusLink @status="operational" />

        <AF.LegalLinks />

        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">v.01.15</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">Name</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">API: 1.02</Hds::Text::Body>
        </AF.Item>

        <AF.ExtraContentAfter>
          <Shw::Placeholder @height="2em" @text="After" @background="#FF7575" />
        </AF.ExtraContentAfter>
      </Hds::AppFooter>
    </div>

    <Shw::Text::H4>Tablet view</Shw::Text::H4>

    <div class="shw-component-app-footer-tablet-view">
      <Hds::AppFooter as |AF|>
        <AF.ExtraContentBefore>
          <Shw::Placeholder @height="2em" @text="Before" @background="#FF7575" />
        </AF.ExtraContentBefore>

        <AF.StatusLink @status="operational" />

        <AF.LegalLinks />

        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">v.01.15</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">Name</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">API: 1.02</Hds::Text::Body>
        </AF.Item>

        <AF.ExtraContentAfter>
          <Shw::Placeholder @height="2em" @text="After" @background="#FF7575" />
        </AF.ExtraContentAfter>
      </Hds::AppFooter>
    </div>

    <Shw::Text::H4>Mobile (large) view</Shw::Text::H4>

    <div class="shw-component-app-footer-mobile-large-view">
      <Hds::AppFooter as |AF|>
        <AF.ExtraContentBefore>
          <Shw::Placeholder @height="2em" @text="Before" @background="#FF7575" />
        </AF.ExtraContentBefore>

        <AF.StatusLink @status="operational" />

        <AF.LegalLinks />

        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">v.01.15</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">Name</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">API: 1.02</Hds::Text::Body>
        </AF.Item>

        <AF.ExtraContentAfter>
          <Shw::Placeholder @height="2em" @text="After" @background="#FF7575" />
        </AF.ExtraContentAfter>
      </Hds::AppFooter>
    </div>

    <Shw::Text::H4>Mobile (small) view</Shw::Text::H4>

    <div class="shw-component-app-footer-mobile-small-view">
      <Hds::AppFooter as |AF|>
        <AF.ExtraContentBefore>
          <Shw::Placeholder @height="2em" @text="Before" @background="#FF7575" />
        </AF.ExtraContentBefore>

        <AF.StatusLink @status="operational" />

        <AF.LegalLinks />

        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">v.01.15</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">Name</Hds::Text::Body>
        </AF.Item>
        <AF.Item>
          <Hds::Text::Body @tag="span" @size="100" @color="primary">API: 1.02</Hds::Text::Body>
        </AF.Item>

        <AF.ExtraContentAfter>
          <Shw::Placeholder @height="2em" @text="After" @background="#FF7575" />
        </AF.ExtraContentAfter>
      </Hds::AppFooter>
    </div>

    <Shw::Divider />

    <Shw::Text::H2>Base components & child components</Shw::Text::H2>

    <button type="button" {{on "click" this.toggleHighlight}}>
      {{if this.showHighlight "Hide" "Show"}}
      layout highlight
    </button>

    <Shw::Text::H3>Extra Content</Shw::Text::H3>

    <Shw::Flex {{style gap="2rem"}} as |SF|>
      <SF.Item @label="Hds::AppFooter::ExtraContentBefore">
        <Hds::AppFooter::ExtraContentBefore>
          <Shw::Placeholder @height="2em" @text="Extra Content Before" @background="#FF7575" />
        </Hds::AppFooter::ExtraContentBefore>
      </SF.Item>

      <SF.Item @label="Hds::AppFooter::ExtraContentAfter">
        <Hds::AppFooter::ExtraContentAfter>
          <Shw::Placeholder @height="2em" @text="Extra Content After" @background="#FF7575" />
        </Hds::AppFooter::ExtraContentAfter>
      </SF.Item>
    </Shw::Flex>

    <Shw::Divider @level={{2}} />

    <Shw::Text::H3>Hds::AppFooter::Item</Shw::Text::H3>

    <ul class="hds-app-footer__list">
      <Hds::AppFooter::Item><Hds::Text::Body
          @tag="span"
          @size="100"
          @color="primary"
        >Item</Hds::Text::Body></Hds::AppFooter::Item>
    </ul>

    <Shw::Divider @level={{2}} />

    <Shw::Text::H3>Hds::AppFooter::Link</Shw::Text::H3>

    <Shw::Text::H4>States</Shw::Text::H4>

    <Shw::Flex {{style gap="2rem" justifyContent="space-between"}} as |SF|>
      {{#each @model.STATES as |state|}}
        <SF.Item @label={{state}}>
          <ul class="hds-app-footer__list">
            <Hds::AppFooter::Link @href="#" mock-state-value={{state}}>Link</Hds::AppFooter::Link>
          </ul>
        </SF.Item>
      {{/each}}
    </Shw::Flex>

    <Shw::Divider @level={{2}} />

    <Shw::Text::H3>Hds::AppFooter::StatusLink</Shw::Text::H3>

    <Shw::Text::H4>Status variants</Shw::Text::H4>

    <Shw::Flex {{style gap="2rem" justifyContent="space-between"}} as |SF|>
      {{#each-in @model.STATUSES as |status|}}
        <SF.Item @label={{status}}>
          <ul class="hds-app-footer__list">
            <Hds::AppFooter::StatusLink @status={{status}} />
          </ul>
        </SF.Item>
      {{/each-in}}
    </Shw::Flex>

    <Shw::Text::H4>With custom values</Shw::Text::H4>

    <Shw::Text::Body><strong>Custom values combined with a standard status</strong></Shw::Text::Body>

    <Shw::Flex {{style gap="2rem"}} as |SF|>
      <SF.Item @label="with custom text">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @status="operational" @text="Operativo" />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom icon color">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @status="operational" @statusIconColor="purple" />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom icon">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @status="operational" @statusIcon="cloud-check" />
        </ul>
      </SF.Item>
    </Shw::Flex>

    <Shw::Text::Body><strong>Custom values with no status</strong></Shw::Text::Body>
    <Shw::Flex {{style gap="2rem"}} as |SF|>
      <SF.Item @label="with custom icon and text">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink @statusIcon="hexagon-fill" @text="Lorem ipsum" />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom icon, icon color, text, & href">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::StatusLink
            @statusIcon="waypoint"
            @statusIconColor="var(--token-color-waypoint-brand)"
            @href="https://www.hashicorp.com/products/waypoint"
            @text="Waypoint"
          />
        </ul>
      </SF.Item>
    </Shw::Flex>

    <Shw::Divider @level={{2}} />

    <Shw::Text::H3>Hds::AppFooter::LegalLinks</Shw::Text::H3>

    <Shw::Flex {{style gap="2rem"}} @direction="column" as |SF|>
      <SF.Item @label="with default url for “Terms” link">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::LegalLinks />
        </ul>
      </SF.Item>

      <SF.Item @label="with custom url for “Terms” link">
        <ul class="hds-app-footer__list">
          <Hds::AppFooter::LegalLinks @termsUrl="https://www.terraform.io/tfc-terms" />
        </ul>
      </SF.Item>
    </Shw::Flex>

    <Shw::Divider @level={{2}} />

    <Shw::Text::H3>Hds::AppFooter::Copyright</Shw::Text::H3>

    <Shw::Flex {{style gap="2rem"}} as |SF|>
      <SF.Item @label="with default (current) year">
        <Hds::AppFooter::Copyright />
      </SF.Item>

      <SF.Item @label="with custom year">
        <Hds::AppFooter::Copyright @year="1984" />
      </SF.Item>
    </Shw::Flex>
  </div>
</section>