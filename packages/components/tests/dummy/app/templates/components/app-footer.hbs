{{page-title "AppFooter Component"}}

<Shw::Text::H1>AppFooter</Shw::Text::H1>

<section data-test-percy>
  <Shw::Text::H2>Content</Shw::Text::H2>

  <Shw::Text::H3>With only the default content</Shw::Text::H3>

  <Hds::AppFooter />

  <Shw::Text::H3>With generic custom “link” content</Shw::Text::H3>

  <Hds::AppFooter>
    <:linksBefore>
      <Hds::AppFooter::Item>
        <Shw::Placeholder @height="2em" @text="linksBefore" @background="#e4e4e4" />
      </Hds::AppFooter::Item>
    </:linksBefore>

    <:linksAfter>
      <Hds::AppFooter::Item>
        <Shw::Placeholder @height="2em" @text="LinksAfter" @background="#e4e4e4" />
      </Hds::AppFooter::Item>
    </:linksAfter>
  </Hds::AppFooter>

  <Shw::Text::H3>With typical custom content</Shw::Text::H3>

  <Hds::AppFooter>
    <:linksBefore>
      <Hds::AppFooter::StatusLink @status="operational" />
      <Hds::AppFooter::Link @href="https://cloud.hashicorp.com/docs/changelog">Changelog</Hds::AppFooter::Link>
    </:linksBefore>
  </Hds::AppFooter>
</section>