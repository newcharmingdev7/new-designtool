  <Shw::Text::H3>With only the default content</Shw::Text::H3>

  <Hds::AppFooter />

  <Shw::Text::H3>With generic custom content</Shw::Text::H3>

  <Hds::AppFooter>
    <:linksBefore>
      <Hds::AppFooter::Item>
        <Shw::Placeholder @height="1.5em" @text="linksBefore" @background="#e4e4e4" />
      </Hds::AppFooter::Item>
    </:linksBefore>

    <:linksAfter>
      <Hds::AppFooter::Item>
        <Shw::Placeholder @height="1.5em" @text="LinksAfter" @background="#e4e4e4" />
      </Hds::AppFooter::Item>
    </:linksAfter>

    <:extraContent>
      <Shw::Placeholder @height="36px" @text="Extra content" @background="#e4e4e4" />
    </:extraContent>
  </Hds::AppFooter>

  <Shw::Text::H3>With typical custom content</Shw::Text::H3>

  <Hds::AppFooter>
    <:linksBefore>
      {{! TODO: StatusLink should be separate component }}
      <Hds::AppFooter::Link @href="https://status.hashicorp.com">Platform fully operational</Hds::AppFooter::Link>

      <Hds::AppFooter::Link
        @href="https://cloud.hashicorp.com/docs/changelog"
      >Changelog</Hds::AppFooter::Link>
    </:linksBefore>
  </Hds::AppFooter>
</section>