{{page-title "Table Component"}}
<h2 class="dummy-h2">
  Table
</h2>
<section data-test-percy>
  <h3 class="dummy-h3" id="showcase">
    <a href="#showcase" class="dummy-link-section">ยง</a>
    Showcase
  </h3>

  <h4 class="dummy-h4">
    Sortable table (with @customSort defined)
  </h4>
  <Hds::Table
    @model={{this.model.data}}
    @columns={{array
      (hash key="artist" label="Artist" isSortable="true")
      (hash key="album" label="Album")
      (hash key="year" label="Release Year")
      (hash key="badge-color.key" label="Color" isSortable="true")
    }}
    @sortBy="badge-color.key"
  >
    <:body as |B|>
      <B.Tr>
        <B.Td>{{B.data.artist}}</B.Td>
        <B.Td>{{B.data.album}}</B.Td>
        <B.Td>{{B.data.year}}</B.Td>
        <B.Td>
          <Hds::Badge
            @text={{B.data.badge-color.name}}
            @type={{B.data.badge-type}}
            @color={{B.data.badge-color.name}}
          />
        </B.Td>
      </B.Tr>
    </:body>
  </Hds::Table>
</section>