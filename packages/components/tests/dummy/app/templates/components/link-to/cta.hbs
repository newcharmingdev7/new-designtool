{{page-title "CTA (Call To Action)"}}

<h2 class="dummy-h2">CTA (Call To Action)</h2>

<section>
  <h3 class="dummy-h3">Component API</h3>
  <p class="dummy-paragraph">TODO</p>
</section>

<section data-test-percy>
  <h3 class="dummy-h3">Showcase</h3>
  <h4 class="dummy-h4">Content</h4>
  <div class="dummy-cta-base-sample">
    <Hds::LinkTo::Cta @text="Only text" />
    <Hds::LinkTo::Cta @icon="plus" @iconPosition="leading" @text="Text + leading icon" />
    <Hds::LinkTo::Cta @icon="arrow-right" @iconPosition="trailing" @text="Text + trailing icon" />
    <div class="dummy-cta-max-width-container">
      <Hds::LinkTo::Cta @icon="plus" @text="This is a very long text that should go on multiple lines" />
    </div>
  </div>

  <h4 class="dummy-h4">Sizes</h4>
  <div class="dummy-cta-base-sample">
    {{#each @model.SIZES as |size|}}
      <Hds::LinkTo::Cta @icon="plus" @text={{capitalize size}} @size={{size}} />
    {{/each}}
    <div class="dummy-cta-full-width-container">
      <Hds::LinkTo::Cta @icon="plus" @text="Full width" @isFullWidth={{true}} />
    </div>
  </div>

  <h4 class="dummy-h4">States (in each size)</h4>
  <div class="dummy-cta-states-grid">
    {{#each @model.SIZES as |size|}}
      {{#each @model.STATES as |state|}}
        <div>
          <span class="dummy-text-small">{{capitalize size}}/{{state}}:</span>
          <br />
          <Hds::LinkTo::Cta @icon="plus" @text={{capitalize state}} @size={{size}} class="is-{{state}}" />
        </div>
      {{/each}}
    {{/each}}
    {{#each @model.STATES as |state|}}
      <div>
        <span class="dummy-text-small">Full width/{{state}}:</span>
        <br />
        <Hds::LinkTo::Cta @icon="plus" @text={{capitalize state}} @isFullWidth={{true}} class="is-{{state}}" />
      </div>
    {{/each}}
  </div>
</section>