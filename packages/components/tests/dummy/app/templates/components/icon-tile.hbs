{{page-title "IconTile"}}

<Shw::Text::H1>IconTile</Shw::Text::H1>

<section data-test-percy>

  <Shw::Text::H2>Size</Shw::Text::H2>

  <Shw::Sample::Grid @columns={{2}} {{style width="fit-content"}} as |SG|>
    <SG.Item @label="With logo">
      <Shw::Sample::Flex as |SF|>
        {{#each @model.SIZES as |size|}}
          <SF.Item>
            <Hds::IconTile @logo="boundary" @size={{size}} />
          </SF.Item>
        {{/each}}
      </Shw::Sample::Flex>
    </SG.Item>
    <SG.Item @label="With icon">
      <Shw::Sample::Flex as |SF|>
        {{#each @model.SIZES as |size|}}
          <SF.Item>
            <Hds::IconTile @icon="dashboard" @size={{size}} />
          </SF.Item>
        {{/each}}
      </Shw::Sample::Flex>
    </SG.Item>
    <SG.Item @label="With logo + secondary icon">
      <Shw::Sample::Flex as |SF|>
        {{#each @model.SIZES as |size|}}
          <SF.Item>
            <Hds::IconTile @logo="boundary" @size={{size}} @iconSecondary="plus" />
          </SF.Item>
        {{/each}}
      </Shw::Sample::Flex>
    </SG.Item>
    <SG.Item @label="With icon + secondary icon">
      <Shw::Sample::Flex as |SF|>
        {{#each @model.SIZES as |size|}}
          <SF.Item>
            <Hds::IconTile @icon="dashboard" @size={{size}} @iconSecondary="trash" />
          </SF.Item>
        {{/each}}
      </Shw::Sample::Flex>
    </SG.Item>
  </Shw::Sample::Grid>

  <Shw::Text::H2>Logo</Shw::Text::H2>

  <Shw::Sample::Grid @columns={{5}} as |SG|>
    {{#each @model.PRODUCTS as |product|}}
      <SG.Item @label={{product}}>
        <Shw::Sample::Flex as |SF2|>
          {{#each @model.SIZES as |size|}}
            <SF2.Item>
              <Hds::IconTile @logo={{product}} @size={{size}} />
            </SF2.Item>
          {{/each}}
        </Shw::Sample::Flex>
      </SG.Item>
    {{/each}}
  </Shw::Sample::Grid>

  <Shw::Text::H2>Icon color</Shw::Text::H2>

  <Shw::Sample::Grid @columns={{5}} as |SG|>
    {{#each @model.COLORS as |color|}}
      {{! As agreed with designers, we prefer to hide the option of icon with "hcp" color }}
      {{#if (not-eq color "hcp")}}
        <SG.Item @label={{color}}>
          <Shw::Sample::Flex as |SF|>
            {{#each @model.SIZES as |size|}}
              <SF.Item>
                <Hds::IconTile @icon="dashboard" @size={{size}} @color={{color}} />
              </SF.Item>
            {{/each}}
          </Shw::Sample::Flex>
        </SG.Item>
      {{/if}}
    {{/each}}
  </Shw::Sample::Grid>
</section>