{{page-title "Card component"}}

<h2 class="dummy-h2">Card container</h2>

<section data-test-percy>

  <h4 class="dummy-h4">Elevation:</h4>

  <div class="shw-component-card-wrapper">
    <Shw::Sample::Grid @title="level" @columns={{3}} {{style width="fit-content"}} as |SG|>
      {{#each @model.CONTAINER_LEVELS as |level|}}
        <SG.Item>
          <Hds::Card::Container @level={{level}}>
            <Shw::Placeholder @text={{level}} @width="200" @height="200" @background="transparent" />
          </Hds::Card::Container>
        </SG.Item>
      {{/each}}
    </Shw::Sample::Grid>
    <Shw::Sample::Grid @title="levelHover" @columns={{3}} {{style width="fit-content"}} as |SG|>
      {{#each @model.CONTAINER_LEVELS as |level|}}
        <SG.Item>
          <Hds::Card::Container @levelHover={{level}} mock-state-value="hover">
            <Shw::Placeholder @text={{level}} @width="200" @height="60" @background="transparent" />
          </Hds::Card::Container>
        </SG.Item>
      {{/each}}
    </Shw::Sample::Grid>
    <Shw::Sample::Grid @title="levelActive" @columns={{3}} {{style width="fit-content"}} as |SG|>
      {{#each @model.CONTAINER_LEVELS as |level|}}
        <SG.Item>
          <Hds::Card::Container @levelActive={{level}} mock-state-value="active">
            <Shw::Placeholder @text={{level}} @width="200" @height="60" @background="transparent" />
          </Hds::Card::Container>
        </SG.Item>
      {{/each}}
    </Shw::Sample::Grid>
  </div>

  <h4 class="dummy-h4">Border:</h4>

  <div class="shw-component-card-wrapper">
    <Shw::Sample::Grid @columns={{3}} {{style width="fit-content"}} as |SG|>
      {{#each @model.CONTAINER_LEVELS as |level|}}
        <SG.Item>
          <Hds::Card::Container @level={{level}} @hasBorder={{true}}>
            <Shw::Placeholder @text={{level}} @width="200" @height="200" @background="transparent" />
          </Hds::Card::Container>
        </SG.Item>
      {{/each}}
    </Shw::Sample::Grid>
  </div>
  <h4 class="dummy-h4">Background:</h4>

  <div class="shw-component-card-wrapper">
    <Shw::Sample::Grid @columns={{2}} {{style width="fit-content"}} as |SG|>
      {{#each @model.CONTAINER_BACKGROUNDS as |background|}}
        <SG.Item>
          <Hds::Card::Container @level="mid" @hasBorder={{true}} @background={{background}}>
            <Shw::Placeholder @text={{background}} @width="200" @height="200" @background="transparent" />
          </Hds::Card::Container>
        </SG.Item>
      {{/each}}
    </Shw::Sample::Grid>
  </div>

  <h4 class="dummy-h4">Overflow:</h4>
  <div class="shw-component-card-wrapper">
    <Shw::Sample::Grid @columns={{2}} {{style width="fit-content"}} as |SG|>
      <SG.Item>
        <Hds::Card::Container @level="mid" @hasBorder={{true}}>
          <div class="shw-component-card-overflow__wrapper-relative">
            <Shw::Placeholder @text="hidden (default)" @width="200" @height="200" @background="#e1f5fe" />
            <div class="shw-component-card-overflow__content-absolute"></div>
          </div>
        </Hds::Card::Container>
      </SG.Item>
      <SG.Item>
        <Hds::Card::Container @level="mid" @hasBorder={{true}} @overflow="visible">
          <div class="shw-component-card-overflow__wrapper-relative">
            <Shw::Placeholder @text="visible" @width="200" @height="200" @background="#e1f5fe" />
            <div class="shw-component-card-overflow__content-absolute"></div>
          </div>
        </Hds::Card::Container>
      </SG.Item>
    </Shw::Sample::Grid>
  </div>

</section>