{{page-title "Button component"}}

<h2 class="dummy-h2">Button component</h2>

<section data-test-percy>

  <h4 class="dummy-h4">Generated element</h4>

  <Shw::Sample::Flex as |SF|>
    <SF.Item class="shw-component-button-generated">
      <Shw::Sample::Label>default ⇒ <code>&lt;button&gt;</code></Shw::Sample::Label>
      <Hds::Button @icon="plus" @text="Lorem ipsum dolor" @color="primary" />
      <Hds::Button @icon="plus" @text="Lorem ipsum dolor" @color="primary" disabled />
    </SF.Item>
    <SF.Item class="shw-component-button-generated">
      <Shw::Sample::Label>with <code>@href</code> ⇒ <code>&lt;a&gt;</code></Shw::Sample::Label>
      <Hds::Button @icon="plus" @text="Lorem ipsum dolor" @color="primary" @href="#" />
      <Hds::Button @icon="plus" @text="Lorem ipsum dolor" @color="primary" @href="#" disabled />
    </SF.Item>
    <SF.Item class="shw-component-button-generated">
      <Shw::Sample::Label>with<code>@route</code>
        ⇒
        <code>&lt;LinkTo&gt;</code>
        ⇒
        <code>&lt;a&gt;</code></Shw::Sample::Label>
      <Hds::Button @icon="plus" @text="Lorem ipsum dolor" @color="primary" @route="index" />
      <Hds::Button @icon="plus" @text="Lorem ipsum dolor" @color="primary" @route="index" disabled />
    </SF.Item>
  </Shw::Sample::Flex>

  <h4 class="dummy-h4">Content</h4>

  <Shw::Sample::Flex as |SF|>
    <SF.Item>
      <Hds::Button @text="Only text" />
    </SF.Item>
    <SF.Item>
      <Hds::Button @icon="plus" @iconPosition="leading" @text="Text + leading icon" />
    </SF.Item>
    <SF.Item>
      <Hds::Button @icon="arrow-right" @iconPosition="trailing" @text="Text + trailing icon" />
    </SF.Item>
    <SF.Item>
      <Hds::Button @icon="plus" @isIconOnly={{true}} @text="Icon only" />
    </SF.Item>
    <SF.Item {{style width="200px"}}>
      <Hds::Button @icon="plus" @text="This is a very long text that should go on multiple lines" />
    </SF.Item>
  </Shw::Sample::Flex>

  <h4 class="dummy-h4">Sizes</h4>

  <Shw::Sample::Flex as |SF|>
    {{#each @model.SIZES as |size|}}
      <SF.Item>
        <Hds::Button @icon="plus" @text={{capitalize size}} @size={{size}} />
      </SF.Item>
    {{/each}}
    <SF.Item @outlined={{true}} {{style width="300px"}}>
      <Hds::Button @icon="plus" @text="Full width" @isFullWidth={{true}} />
    </SF.Item>
  </Shw::Sample::Flex>

  <h4 class="dummy-h4">Colors</h4>

  <Shw::Sample::Flex as |SF|>
    {{#each @model.COLORS as |color|}}
      <SF.Item>
        <Hds::Button @icon="plus" @text={{capitalize color}} @color={{color}} />
      </SF.Item>
    {{/each}}
  </Shw::Sample::Flex>

  <h4 class="dummy-h4">States (in each size)</h4>

  {{#each @model.COLORS as |color|}}
    <h5 class="dummy-h5">{{capitalize color}}</h5>
    <Shw::Sample::Grid @columns={{5}} as |SG|>
      {{#each @model.SIZES as |size|}}
        {{#each @model.STATES as |state|}}
          <SG.Item @label="{{capitalize size}}/{{capitalize state}}">
            <Hds::Button
              @icon="plus"
              @text={{capitalize state}}
              @size={{size}}
              @color={{color}}
              mock-state-value={{state}}
            />
          </SG.Item>
        {{/each}}
      {{/each}}
      {{#if (not-eq color "tertiary")}}
        {{#each @model.STATES as |state|}}
          <SG.Item @label="Full width/{{capitalize state}}">
            <Hds::Button
              @icon="plus"
              @text={{capitalize state}}
              @color={{color}}
              @isFullWidth={{true}}
              mock-state-value={{state}}
            />
          </SG.Item>
        {{/each}}
      {{/if}}
    </Shw::Sample::Grid>
  {{/each}}

  <h4 class="dummy-h4">Containers</h4>

  <Shw::Sample::Flex as |SF|>
    <SF.Item>
      <Shw::Sample::Label>Parent with <code>display: inline-block</code></Shw::Sample::Label>
      <div {{style display="inline-block"}}>
        <Hds::Button @icon="plus" @iconPosition="leading" @text="Text + leading icon" />
      </div>
    </SF.Item>
    <SF.Item>
      <Shw::Sample::Label>Parent with <code>display: inline-flex</code></Shw::Sample::Label>
      <div {{style display="inline-flex"}}>
        <Hds::Button @icon="plus" @iconPosition="leading" @text="Text + leading icon" />
      </div>
    </SF.Item>
    <SF.Item>
      <Shw::Sample::Label>Parent with <code>flex-grow: 0</code></Shw::Sample::Label>
      <div {{style display="flex"}}>
        <div {{style flex-grow="0"}}>
          <Hds::Button @icon="plus" @iconPosition="leading" @text="Text + leading icon" />
        </div>
      </div>
    </SF.Item>
    <SF.Item>
      <Shw::Sample::Label>Parent with <code>max-width: fit-content</code></Shw::Sample::Label>
      <div {{style max-width="fit-content"}}>
        <Hds::Button @icon="plus" @iconPosition="leading" @text="Text + leading icon" />
      </div>
    </SF.Item>
  </Shw::Sample::Flex>

</section>