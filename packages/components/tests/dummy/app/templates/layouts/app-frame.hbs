            <Shw::Placeholder @height="60px" @text="header" @background="#e5ffd2" />
          </Frame.Header>
          <Frame.Sidebar>
            <Shw::Placeholder @width="120px" @height="100%" @text="sidebar" @background="#e4c5f3" />
          </Frame.Sidebar>
          <Frame.Main>
            <Shw::Placeholder @height="100%" @text="main" @background="#d2f4ff" />
          </Frame.Main>
