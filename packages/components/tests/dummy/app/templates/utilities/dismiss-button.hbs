{{page-title "DismissButton Component"}}

<h2 class="dummy-h2">DismissButton</h2>

<section data-test-percy>

  <h4 class="dummy-h4">States</h4>

  <Shw::Sample::Grid @columns={{4}} {{style width="fit-content"}} as |SG|>
    {{#each @model.STATES as |state|}}
      <SG.Item @label={{capitalize state}} class="shw-utility-dismiss-button-sample-state">
        <Hds::DismissButton mock-state-value={{state}} />
      </SG.Item>
    {{/each}}
  </Shw::Sample::Grid>

</section>