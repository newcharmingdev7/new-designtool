<div class="hds-pagination-page-size hds-typography-body-200 hds-font-weight-medium" ...attributes>
  {{! Select # items per page to display: }}
  <label for={{this.pageSizeId}}>Items per page</label>
  <Hds::Form::Select::Base id={{this.pageSizeId}} as |S|>
    <S.Options>
      <option value="10">10</option>
      <option value="30">30</option>
      <option value="50">50</option>
    </S.Options>
  </Hds::Form::Select::Base>
</div>