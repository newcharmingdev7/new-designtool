<div class={{this.classNames}} ...attributes>
  {{#if this.showTotalCount}}
    <Hds::PaginationBar::PaginationTotalCount @hasTotalItems={{this.hasTotalItems}} />
  {{/if}}

  <Hds::PaginationBar::Pagination @type={{this.type}} />

  {{#if this.showPageSize}}
    <Hds::PaginationBar::PaginationPageSize />
  {{/if}}
</div>

