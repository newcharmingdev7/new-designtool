<div class="hds-pagination-bar" ...attributes>
  {{yield
    (hash
      TotalCount=(component
        "hds/pagination-bar/total-count"
        hasTotalItems=@hasTotalItems
        totalItems=@totalItems
        currentPage=this.currentPage
        itemsPerPage=this.itemsPerPage
      )
    )
  }}

  {{yield
    (hash
      Pagination=(component
        "hds/pagination-bar/pagination"
        type=this.type
        totalPages=this.totalPages
        currentPage=this.currentPage
        onPageChange=this.onPageChange
      )
    )
  }}

  {{yield (hash PageSize=(component "hds/pagination-bar/page-size" onChange=this.onPageSizeChange))}}
</div>