      <span class="hds-pagination__page-label">Next<span class="sr-only"> page</span></span><FlightIcon
        @name="chevron-right"
        class="hds-pagination__page-icon"
      />
    </a>
  </nav>

  <div class="hds-pagination-page-size">
    <Hds::Form::Select::Field as |F|>
      <F.Label>Items per page</F.Label>
      <F.Options>
        <option value="10">10</option>
        <option value="30">30</option>
        <option value="50">50</option>
      </F.Options>
    </Hds::Form::Select::Field>
  </div>
</div>

