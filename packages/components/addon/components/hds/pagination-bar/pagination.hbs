<nav
  class="hds-pagination hds-typography-body-200 hds-font-weight-medium"
  aria-label="Pagination navigation"
  ...attributes
>
  <a class="hds-pagination__page-link" href="/page-?" aria-label="Previous page">
    <FlightIcon @name="chevron-left" class="hds-pagination__page-icon" />
    {{#if this.isCompact}}
      <span class="hds-pagination__page-label" aria-hidden="true">
        Previous
      </span>
    {{/if}}
  </a>

  {{#if this.isNumbered}}
    <ul class="hds-pagination__page-list">
      <li class="hds-pagination__page-selected">
        {{! TODO: Look into replacing anchor links with Hds::Interactive }}
        <a class="hds-pagination__page-link" href="/page-1" aria-current="page">
          <span class="sr-only">page </span>1
        </a>
      </li>
      <li>
        <a class="hds-pagination__page-link" href="/page-2">
          <span class="sr-only">page </span>2
        </a>
      </li>
      <li>
        <a class="hds-pagination__page-link" href="/page-3">
          <span class="sr-only">page </span>3
        </a>
      </li>
      <li>
        <a class="hds-pagination__page-link" href="/page-4">
          <span class="sr-only">page </span>4
        </a>
      </li>
      <li>
        <a class="hds-pagination__page-link" href="/page-5">
          <span class="sr-only">page </span>5
        </a>
      </li>
      <li>
        <span class="hds-pagination__ellipsis">...</span>
      </li>
      <li>
        <a class="hds-pagination__page-link" href="/page-10">
          <span class="sr-only">page </span>10
        </a>
      </li>
    </ul>
  {{/if}}

  <a class="hds-pagination__page-link" href="/page-?" aria-label="Next page">
    {{#if this.isCompact}}
      <span class="hds-pagination__page-label" aria-hidden="true">
        Next
      </span>
    {{/if}}
    <FlightIcon @name="chevron-right" class="hds-pagination__page-icon" />
  </a>
</nav>