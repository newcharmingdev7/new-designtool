{{! TODO: Add logic to apply class: "hds-pagination__page-link--labeled" }}
<Hds::Interactive
  class="hds-pagination__page-link hds-typography-body-100 hds-font-weight-medium"
  {{on "click" this.onClick}}
  @onClick={{@onClick}}
  @direction={{@direction}}
  aria-label={{if this.isNext "Next page" "Previous page"}}
  disabled={{@disabled}}
  ...attributes
>
  {{#if (eq this.direction "next")}}
    {{#if (eq @type "compact")}}
      <span class="hds-pagination__page-label" aria-hidden="true">
        Next
      </span>
    {{/if}}
  {{/if}}

  <FlightIcon
    class="hds-pagination__page-icon"
    @name={{if (eq this.direction "next") "chevron-right" "chevron-left"}}
  />

  {{#if (eq this.direction "previous")}}
    {{#if (eq @type "compact")}}
      <span class="hds-pagination__page-label" aria-hidden="true">
        Previous
      </span>
    {{/if}}
  {{/if}}
</Hds::Interactive>