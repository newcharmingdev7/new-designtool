<Hds::Interactive
  class={{this.classNames}}
  {{on "click" this.onClick}}
  @onClick={{@onClick}}
  @direction={{@direction}}
  aria-label={{if this.isNext "Next page" "Previous page"}}
  disabled={{@disabled}}
  ...attributes
>
  {{#if (eq @direction "next")}}
    {{#if (eq @type "compact")}}
      <span class="hds-pagination__page-label" aria-hidden="true">
        Next
      </span>
    {{/if}}
  {{/if}}

  <FlightIcon class="hds-pagination__page-icon" @name={{if (eq @direction "next") "chevron-right" "chevron-left"}} />

  {{#if (eq @direction "previous")}}
    {{#if (eq @type "compact")}}
      <span class="hds-pagination__page-label" aria-hidden="true">
        Previous
      </span>
    {{/if}}
  {{/if}}
</Hds::Interactive>