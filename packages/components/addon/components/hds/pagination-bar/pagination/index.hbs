<nav class="hds-pagination" aria-label="Pagination navigation" ...attributes>
  <Hds::PaginationBar::Pagination::NavButton
    @direction="previous"
    @type={{this.type}}
    @onClick={{this.changePage}}
    @currentPage={{@currentPage}}
    @totalPages={{@totalPages}}
  />

  {{#if (eq this.type "numbered")}}
    <ul class="hds-pagination__page-list">
      {{#each this.pages as |page|}}
        <Hds::PaginationBar::Pagination::PageNumber
          @page={{page}}
          @currentPage={{@currentPage}}
          @onClick={{this.selectPage}}
        />
      {{/each}}
    </ul>
  {{/if}}

  <Hds::PaginationBar::Pagination::NavButton
    @direction="next"
    @type={{this.type}}
    @onClick={{this.changePage}}
    @currentPage={{@currentPage}}
    @totalPages={{@totalPages}}
  />
</nav>