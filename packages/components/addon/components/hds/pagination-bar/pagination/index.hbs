<nav
  class="hds-pagination hds-typography-body-200 hds-font-weight-medium"
  aria-label="Pagination navigation"
  ...attributes
>
  <Hds::PaginationBar::Pagination::NavButton
    @direction="previous"
    @type={{this.type}}
    @onClick={{this.changePage}}
    @currentPage={{@currentPage}}
    @totalPages={{@totalPages}}
  />

  {{#if (eq this.type "numbered")}}
    <ul class="hds-pagination__page-list">
      {{#each this.pages as |page|}}
        <li class={{if (eq page @currentPage) "hds-pagination__page-selected" null}}>
          <Hds::Interactive class="hds-pagination__page-link" aria-selected={{if (eq page @currentPage) "page" null}}>
            <span class="sr-only">page </span>{{page}}
          </Hds::Interactive>
        </li>
      {{/each}}
    </ul>
  {{/if}}

  <Hds::PaginationBar::Pagination::NavButton
    @direction="next"
    @type={{this.type}}
    @onClick={{this.changePage}}
    @currentPage={{@currentPage}}
    @totalPages={{@totalPages}}
  />
</nav>