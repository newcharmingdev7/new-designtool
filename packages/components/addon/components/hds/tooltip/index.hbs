<Hds::Interactive
  class="hds-tooltip"
  {{hds-tooltip this.text options=this.options}}
  @current-when={{@current-when}}
  @models={{hds-link-to-models @model @models}}
  @query={{hds-link-to-query @query}}
  @replace={{@replace}}
  @route={{@route}}
  @isRouteExternal={{@isRouteExternal}}
  @href={{@href}}
  @isHrefExternal={{@isHrefExternal}}
  ...attributes
>
  {{#if @icon}}
    <FlightIcon class="hds-tooltip__icon" @name={{@icon}} />
  {{else}}
    {{~yield~}}
  {{/if}}
</Hds::Interactive>