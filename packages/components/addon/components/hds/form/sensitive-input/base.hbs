<div class={{this.classNames}} {{style width=@width}}>
  {{#if @isMultiline}}
    <Hds::Form::Textarea::Base
      class="hds-form-sensitive-input__control"
      @value={{@value}}
      @isInvalid={{@isInvalid}}
      @height={{@height}}
      id={{this.id}}
      ...attributes
    />
  {{else}}
    <Hds::Form::TextInput::Base
      class="hds-form-sensitive-input__control"
      @value={{@value}}
      @isInvalid={{@isInvalid}}
      id={{this.id}}
      ...attributes
    />
  {{/if}}
  <button
    class="hds-form-sensitive-input__toggle-button"
    type="button"
    aria-label={{this.ariaLabel}}
    aria-controls={{this.id}}
    {{on "click" this.onClickToggle}}
  >
    <FlightIcon @name={{if this.isObfuscated "eye" "eye-off"}} @size="16" @isInlineBlock={{false}} />
  </button>
</div>