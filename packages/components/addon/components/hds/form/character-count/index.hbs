<Hds::Text::Body
  @tag="div"
  @size="100"
  class={{this.classNames}}
  id={{this.id}}
  {{did-insert this.onInsert}}
  {{will-destroy this.willDestroyNode}}
  ...attributes
  aria-live="polite"
>
  {{#if (has-block)}}
    {{yield (hash maxLength=this.maxLength currentLength=this.currentLength remainingLength=this.remainingLength)}}
  {{else}}
    {{this.currentLength}}
    /
    {{this.maxLength}}
  {{/if}}
</Hds::Text::Body>