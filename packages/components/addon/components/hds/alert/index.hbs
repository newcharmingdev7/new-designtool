<div class={{this.classNames}} role="alert" ...attributes>
  {{#if this.icon}}
    <div class="hds-alert__icon">
      <FlightIcon @name={{this.icon}} @size={{this.iconSize}} @stretched={{true}} @isInlineBlock={{false}} />
    </div>
  {{/if}}

  <div class="hds-alert__content">
    <div class="hds-alert__text">
      {{#if @title}}
        <div class="hds-alert__title">{{@title}}</div>
      {{/if}}
      {{#if @description}}
        <div class="hds-alert__description">{{html-safe @description}}</div>
      {{/if}}
    </div>

    {{! Notice: the arg "ignoreActionsBlock" is not officially part of the API of the "Alert" component, but is used to by-pass the problem of Ember passing down the <actions> block even if there are no "actions" declared in the Toast }}
    {{#if (and (has-block "actions") (not @ignoreActionsBlock))}}
      <div class="hds-alert__actions">
        {{yield
          (hash
            Button=(component "hds/button" size="small")
            Link::Standalone=(component "hds/link/standalone" size="small")
            LinkTo::Standalone=(component "hds/link-to/standalone" size="small")
          )
          to="actions"
        }}
      </div>
    {{/if}}

    {{! Notice: the arg "ignoreGenericBlock" is not officially part of the API of the "Alert" component, but is used to by-pass the problem of Ember passing down the <generic> block even if there is no "generic" content declared in the Toast }}
    {{#if (and (has-block "generic") (not @ignoreGenericBlock))}}
      {{yield to="generic"}}
    {{/if}}
  </div>

  {{#if this.onDismiss}}
    <button class="hds-alert__dismiss" type="button" aria-label="Dismiss" {{on "click" this.onDismiss}}>
      <FlightIcon @name="x" @size="16" @isInlineBlock={{false}} />
    </button>
  {{/if}}
</div>