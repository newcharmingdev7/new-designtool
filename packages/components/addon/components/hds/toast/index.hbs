<Hds::Alert
  class="hds-toast"
  @type="inline"
  @color={{@color}}
  @icon={{@icon}}
  @title={{@title}}
  @description={{@description}}
  @onClose={{@onClose}}
  ...attributes
>
  <:actions as |A|>
    {{#if (has-block "actions")}}
      {{yield A to="actions"}}
    {{/if}}
  </:actions>
  <:generic as |G|>
    {{#if (has-block "generic")}}
      {{yield G to="generic"}}
    {{/if}}
  </:generic>
</Hds::Alert>