<Hds::Alert
  class="hds-toast"
  @type="inline"
  @color={{@color}}
  @icon={{@icon}}
  @title={{@title}}
  @description={{@description}}
  @onDismiss={{@onDismiss}}
  ...attributes
>
  <:actions as |A|>
    {{yield A to="actions"}}
  </:actions>
  <:generic as |G|>
    {{yield G to="generic"}}
  </:generic>
</Hds::Alert>