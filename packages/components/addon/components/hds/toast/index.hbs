<Hds::Alert
  class="hds-toast"
  @type="inline"
  @color={{@color}}
  @icon={{@icon}}
  @title={{@title}}
  @description={{@description}}
  @onDismiss={{@onDismiss}}
  ...attributes
  as |A|
>
  {{yield
    (hash
      Description=A.Description
      Button=A.Button
      Link::Standalone=A.Link::Standalone
      LinkTo::Standalone=A.LinkTo::Standalone
      Generic=A.Generic
    )
  }}
</Hds::Alert>