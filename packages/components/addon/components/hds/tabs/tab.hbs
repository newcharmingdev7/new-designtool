{{! template-lint-disable no-invalid-role }}

{{! Temporary: fix linter errors with using FlightIcon and BadgeCount inside role="tab" element }}
{{! template-lint-disable require-presentational-children }}

<li class={{this.classNames}} role="presentation" ...attributes>
  <a
    role="tab"
    class="hds-tabs__tab-link hds-typography-body-200 hds-font-weight-medium"
    href={{concat "#" this.panelId}}
    id={{this.tabId}}
    aria-selected={{this.isSelected}}
    tabindex={{unless this.isSelected "-1"}}
    data-is-selected={{this.isInitialTab}}
    {{did-insert this.didInsertNode}}
    {{on "click" this.onClick}}
    {{on "keyup" this.onKeyUp}}
  >
    {{#if @icon}}
      <FlightIcon @name={{@icon}} />
    {{/if}}
    {{yield}}
    {{#if @count}}
      <Hds::BadgeCount @text={{@count}} @size="small" />
    {{/if}}
  </a>
</li>