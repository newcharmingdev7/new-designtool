{{! template-lint-disable require-context-role }}
{{! template-lint-disable no-invalid-role }}

<li class={{this.classNames}} role="presentation" ...attributes>
  <a
    role="tab"
    class="hds-typography-body-200 hds-font-weight-medium"
    href={{concat "#" this.panelId}}
    id={{this.tabId}}
    aria-selected={{this.isSelected}}
    tabindex={{unless this.isSelected "-1"}}
    data-is-selected={{this.isInitialTab}}
    {{did-insert this.didInsertNode}}
    {{on "click" this.onClick}}
    {{on "keyup" this.onKeyUp}}
  >
    {{yield}}
  </a>
</li>