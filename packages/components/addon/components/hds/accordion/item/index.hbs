<Hds::DisclosurePrimitive class={{this.classNames}} @isOpen={{@isOpen}} @toggle={{this.toggle}} ...attributes>
  <:toggle as |t|>
    <div class="hds-accordion-item__toggle">
      {{#if this.isClickable}}
        <button
          class="hds-accordion-item__toggle-button"
          type="button"
          {{on "click" t.onClickToggle}}
          aria-label={{this.ariaLabel}}
          aria-expanded={{if this.isOpen "true" "false"}}
          aria-controls={{this.contentId}}
        >
          <FlightIcon @name="chevron-down" @size="24" @isInlineBlock={{false}} />
        </button>
      {{else}}
        <Hds::Button
          class="hds-accordion-item__toggle-button"
          @text={{this.ariaLabel}}
          @isIconOnly={{true}}
          @icon="chevron-down"
          @color="secondary"
          @size="large"
          {{on "click" t.onClickToggle}}
          aria-expanded={{if this.isOpen "true" "false"}}
          aria-controls={{this.contentId}}
        />
      {{/if}}
      <div
        class="hds-accordion-item__toggle-content hds-typography-display-200 hds-foreground-strong hds-font-weight-semibold"
      >
        {{yield to="toggle"}}
      </div>
    </div>
  </:toggle>

  <:content>
    <div class="hds-accordion-item__content hds-typography-body-200 hds-foreground-primary" id={{this.contentId}}>
      {{yield to="content"}}
    </div>
  </:content>
</Hds::DisclosurePrimitive>