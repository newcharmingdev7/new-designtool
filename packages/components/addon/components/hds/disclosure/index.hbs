<div class="hds-disclosure">
  {{! comment this if you want to view the expanded state for debugging }}
  <pre>isActive = {{this.isActive}}</pre>
  <pre>isInsideToggleContainer = {{this.isInsideToggleContainer}}</pre>
  <pre>isDeactivatingWithClickOnTrigger = {{this.isDeactivatingWithClickOnTrigger}}</pre>
  <div class="hds-disclosure__toggle" id={{this.toggleId}}>
    {{yield (hash onClickToggle=this.onClickToggle) to="toggle"}}
  </div>
  {{#if this.isActive}}
    <div
      class="hds-disclosure__content"
      {{focus-trap
        isActive=this.isActive
        shouldSelfFocus=false
        focusTrapOptions=(hash clickOutsideDeactivates=this.clickOutsideDeactivates onDeactivate=this.onDeactivate)
      }}
    >
      {{yield to="content"}}
    </div>
  {{/if}}
</div>