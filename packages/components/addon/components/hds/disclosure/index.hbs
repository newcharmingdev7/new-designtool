<div class="hds-disclosure">
  {{! comment this if you want to view the expanded state for debugging }}
  {{!-- <pre>this.isExpanded = {{this.isExpanded}}</pre> --}}
  <div class="hds-disclosure__toggle">
    {{yield (hash onTestItWorks=this.onTestItWorks onToggle=this.onToggle) to="toggle"}}
  </div>
  {{#if this.isExpanded}}
    <div
      class="hds-disclosure__content"
      {{focus-trap
        isActive=this.isExpanded
        shouldSelfFocus=true
        focusTrapOptions=(hash clickOutsideDeactivates=true onDeactivate=this.onDeactivate)
      }}
    >
      {{yield to="content"}}
    </div>
  {{/if}}
</div>