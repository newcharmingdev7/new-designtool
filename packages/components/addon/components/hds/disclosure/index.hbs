<div class="hds-disclosure">
  {{! comment this if you want to view the expanded state for debugging }}
  {{!-- <pre>this.isActive = {{this.isActive}}</pre> --}}
  <div class="hds-disclosure__toggle" id={{this.toggleId}}>
    {{yield (hash onTestItWorks=this.onTestItWorks onToggle=this.onToggle) to="toggle"}}
  </div>
  {{#if this.isActive}}
    <div
      class="hds-disclosure__content"
      {{focus-trap
        isActive=this.isActive
        shouldSelfFocus=true
        focusTrapOptions=(hash
          _clickOutsideDeactivates=true
          onActivate=this.onActivate
          onPostActivate=this.onPostActivate
          onDeactivate=this.onDeactivate
          onPostDeactivate=this.onPostDeactivate
          escapeDeactivates=this.escapeDeactivates
          clickOutsideDeactivates=this.clickOutsideDeactivates
        )
      }}
    >
      {{yield to="content"}}
    </div>
  {{/if}}
</div>