<header class={{this.classNames}} ...attributes>
  {{yield (hash Breadcrumb=(component "hds/breadcrumb"))}}
  <div class="hds-page-header__wrapper">
    {{yield (hash IconTile=(component "hds/icon-tile"))}}
    <div class="hds-page-header__main">
      <div class="hds-page-header__content">
        <div class="hds-page-header__heading">
          <h1 class="hds-page-header__heading--content hds-typography-display-500">
            {{this.title}}</h1>
          {{yield (hash Badges=(component "hds/pageheader/badges"))}}
        </div>
        <div class="hds-page-header__metadata">
          {{yield
            (hash
              Subtitle=(component "hds/pageheader/subtitle")
              Description=(component "hds/pageheader/description")
              Generic=(component "hds/yield")
            )
          }}
        </div>
      </div>
      {{yield (hash Actions=(component "hds/button-set"))}}
    </div>
  </div>
</header>