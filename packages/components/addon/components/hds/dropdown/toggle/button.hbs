<button
  class={{this.classNames}}
  type="button"
  ...attributes
  aria-expanded={{if @isOpen "true" "false"}}
  {{on "click" this.onClick}}
>
  <div class="hds-button__text">
    {{this.text}}
  </div>
  <div class="hds-button__icon">
    <FlightIcon @name="chevron-down" @size={{this.iconSize}} @stretched={{true}} />
  </div>
</button>