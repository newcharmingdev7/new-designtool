<Hds::AppFooter::Link class={{this.classNames}} @href="https://status.hashicorp.com" ...attributes>
  {{#if this.statusIcon}}
    <FlightIcon @size="16" @stretch={{true}} @name={{this.statusIcon}} @color={{this.statusIconColor}} />
  {{/if}}

  {{capitalize (lowercase this.status)}}
</Hds::AppFooter::Link>