<div class="hds-app-footer" ...attributes>
  {{yield (hash ExtraContent=(component "hds/app-footer/extra-content"))}}

  <ul class="hds-app-footer__list" aria-label="Footer items">
    {{yield
      (hash
        Link=(component "hds/app-footer/link")
        StatusLink=(component "hds/app-footer/status-link")
        LegalLinks=(component "hds/app-footer/legal-links")
      )
    }}

    <Hds::AppFooter::MetaItems>
      {{yield (hash Item=(component "hds/app-footer/item"))}}
    </Hds::AppFooter::MetaItems>

    <Hds::AppFooter::Copyright />
  </ul>
</div>