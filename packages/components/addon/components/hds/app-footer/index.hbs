<div class="hds-app-footer" ...attributes>
  {{yield (hash ExtraContentBefore=(component "hds/app-footer/extra-content-before"))}}
  <ul class="hds-app-footer__list" aria-label="Footer items">
    {{yield (hash StatusLink=(component "hds/app-footer/status-link"))}}
    {{yield
      (hash
        Link=(component "hds/app-footer/link")
        LegalLinks=(component "hds/app-footer/legal-links")
        Item=(component "hds/app-footer/item")
      )
    }}
  </ul>
  {{yield (hash ExtraContentAfter=(component "hds/app-footer/extra-content-after"))}}
  <Hds::AppFooter::Copyright @year={{@copyrightYear}} />
</div>