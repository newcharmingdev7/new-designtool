{{! TODO: use new Text component? }}
<Hds::AppFooter::Item>
  {{! Q: Use Hds::Interactive for link or just Link::Inline? }}
  <Hds::Link::Inline
    class="hds-app-footer__link hds-typography-body-200"
    @color="secondary"
    @route={{@route}}
    @models={{hds-link-to-models @model @models}}
    @query={{hds-link-to-query @query}}
    @current-when={{@current-when}}
    @replace={{@replace}}
    @isRouteExternal={{@isRouteExternal}}
    @href={{@href}}
    @isHrefExternal={{@isHrefExternal}}
    ...attributes
  >
    {{yield}}
  </Hds::Link::Inline>
</Hds::AppFooter::Item>