<div class={{this.classNames}} ...attributes>
  {{yield (hash Breadcrumb=(component "hds/breadcrumb"))}}
  <div class="hds-pagetitle-title__wrapper">
    <Hds::IconTile @logo="waypoint" @size="medium" />
    <div class="hds-pagetitle-main__content">
      <div class="hds-pagetitle-title__content">
        <h1 class="hds-typography-display-500">{{this.title}}</h1>
        <div class="hds-pagetitle-badge__wrapper">
          {{yield (hash Badges=(component "hds/yield"))}}
        </div>
      </div>
      <p class="hds-typography-body-200">{{this.subtitle}}</p>
      <p class="hds-typography-body-200">{{this.description}}</p>
    </div>
  </div>
</div>