<Hds::DisclosurePrimitive class={{this.classNames}} @isOpen={{@isOpen}} ...attributes>
  <:toggle as |t|>
    <Hds::Reveal::Toggle::Button
      @text={{if (and t.isOpen @textWhenOpen) @textWhenOpen @text}}
      @isOpen={{t.isOpen}}
      {{on "click" t.onClickToggle}}
    />
  </:toggle>

  <:content>
    <div class="hds-reveal__content hds-typography-body-300">
      {{yield}}
    </div>
  </:content>
</Hds::DisclosurePrimitive>