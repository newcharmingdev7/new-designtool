<li class="hds-side-nav__nav-group-item hds-typography-body-200 hds-font-weight-medium">
  <Hds::Interactive
    @href={{@href}}
    @route={{@route}}
    @models={{hds-link-to-models @model @models}}
    @query={{hds-link-to-query @query}}
    @icon={{@icon}}
    @isRouteExternal={{@isRouteExternal}}
    @current-when={{@current-when}}
    class="hds-side-nav__link"
    ...attributes
  >
    {{#if @icon}}
      <FlightIcon class="hds-side-nav__nav-group-icon" @name={{@icon}} @stretched={{true}} />
    {{/if}}

    {{yield}}
  </Hds::Interactive>
</li>